---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'JDV & Abogados - Estudio Jurídico Especializado en Chile',
  description = 'Estudio jurídico en Chile especializado en defensa estatutaria, administrativa, derecho civil, inmobiliario y animalista. Primera consulta gratuita.'
} = Astro.props;

import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title}</title>

  <!-- Preconnect for Performance -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <!-- Fonts: Playfair Display (Display) + Inter (Sans) - V.T.E.F. 2026 -->
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

  <!-- Font Awesome Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
</head>
<body>
  <slot />

  <!-- Navigation JavaScript -->
  <script is:inline>
    // Navigation scroll behavior
    const mainNav = document.getElementById('mainNav');
    let lastScrollY = window.scrollY;
    
    window.addEventListener('scroll', () => {
      const currentScrollY = window.scrollY;
      
      if (currentScrollY > 100) {
        mainNav?.classList.add('scrolled');
      } else {
        mainNav?.classList.remove('scrolled');
      }
      
      lastScrollY = currentScrollY;
    }, { passive: true });

    // Mega Menu Toggle
    const areasToggle = document.getElementById('areasToggle');
    const megaMenu = document.getElementById('megaMenu');
    
    areasToggle?.addEventListener('click', () => {
      const isExpanded = areasToggle.getAttribute('aria-expanded') === 'true';
      areasToggle.setAttribute('aria-expanded', String(!isExpanded));
      megaMenu?.classList.toggle('active');
    });

    // Close mega menu when clicking outside
    document.addEventListener('click', (e) => {
      const target = e.target as HTMLElement;
      if (!target.closest('.has-mega') && !target.closest('.mega-menu-overlay')) {
        megaMenu?.classList.remove('active');
        areasToggle?.setAttribute('aria-expanded', 'false');
      }
    });

    // Mobile menu toggle
    const navToggle = document.getElementById('navTogglePremium');
    const fullscreenMenu = document.getElementById('fullscreenMenu');
    
    navToggle?.addEventListener('click', () => {
      const isActive = navToggle.classList.contains('active');
      navToggle.classList.toggle('active');
      fullscreenMenu?.classList.toggle('active');
      navToggle.setAttribute('aria-expanded', String(!isActive));
      document.body.style.overflow = isActive ? '' : 'hidden';
    });

    // Close mobile menu on link click
    document.querySelectorAll('.fullscreen-link').forEach(link => {
      link.addEventListener('click', () => {
        navToggle?.classList.remove('active');
        fullscreenMenu?.classList.remove('active');
        navToggle?.setAttribute('aria-expanded', 'false');
        document.body.style.overflow = '';
      });
    });
  </script>
</body>
</html>
