<style>
  @keyframes floatOrb {
    0%, 100% { transform: translate(0, 0) scale(1); }
    33% { transform: translate(30px, -20px) scale(1.05); }
    66% { transform: translate(-20px, 15px) scale(0.95); }
  }

  @keyframes pulseIcon {
    0%, 100% { transform: scale(1); box-shadow: 0 0 0 0 rgba(201,169,97,0.3); }
    50% { transform: scale(1.05); box-shadow: 0 0 20px 5px rgba(201,169,97,0.15); }
  }

  .contact-cta-btn::before,
  .contact-cta-main::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.15), transparent);
    transition: left 0.5s ease;
  }

  .contact-cta-btn:hover::before,
  .contact-cta-main:hover::before {
    left: 100%;
  }

  /* ========================================
     SCROLL REVEAL ANIMATIONS
     ======================================== */

  /* Offices Section Header */
  .offices-header {
    opacity: 0;
    transform: translateY(30px);
  }

  .offices-header.visible {
    opacity: 1;
    transform: translateY(0);
    transition: opacity 0.7s cubic-bezier(0.16, 1, 0.3, 1),
                transform 0.7s cubic-bezier(0.16, 1, 0.3, 1);
  }

  /* Office Cards - Staggered entrance */
  .office-card {
    opacity: 0;
    transform: translateY(40px) scale(0.95);
  }

  .office-card.visible {
    opacity: 1;
    transform: translateY(0) scale(1);
    transition: opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1),
                transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .office-card[data-index="0"].visible { transition-delay: 0ms; }
  .office-card[data-index="1"].visible { transition-delay: 150ms; }

  /* Contact Info Cards - Staggered entrance */
  .contact-info-card {
    opacity: 0;
    transform: translateY(30px) scale(0.95);
  }

  .contact-info-card.visible {
    opacity: 1;
    transform: translateY(0) scale(1);
    transition: opacity 0.7s cubic-bezier(0.16, 1, 0.3, 1),
                transform 0.7s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .contact-info-card[data-index="0"].visible { transition-delay: 0ms; }
  .contact-info-card[data-index="1"].visible { transition-delay: 100ms; }
  .contact-info-card[data-index="2"].visible { transition-delay: 200ms; }

  /* Contact Schedule */
  .contact-schedule {
    opacity: 0;
    transform: translateY(20px);
  }

  .contact-schedule.visible {
    opacity: 1;
    transform: translateY(0);
    transition: opacity 0.6s cubic-bezier(0.16, 1, 0.3, 1),
                transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  /* CTA Section Content */
  .cta-content {
    opacity: 0;
    transform: translateY(30px);
  }

  .cta-content.visible {
    opacity: 1;
    transform: translateY(0);
    transition: opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1),
                transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  /* CTA Icon entrance animation */
  .cta-icon {
    opacity: 0;
    transform: scale(0.8) rotate(-10deg);
  }

  .cta-content.visible .cta-icon {
    animation: ctaIconReveal 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.2s forwards;
  }

  @keyframes ctaIconReveal {
    0% {
      opacity: 0;
      transform: scale(0.8) rotate(-10deg);
    }
    60% {
      opacity: 1;
      transform: scale(1.1) rotate(5deg);
    }
    100% {
      opacity: 1;
      transform: scale(1) rotate(0deg);
    }
  }

  /* ========================================
     REDUCED MOTION - Accessibility
     ======================================== */

  @media (prefers-reduced-motion: reduce) {
    .offices-header,
    .office-card,
    .contact-info-card,
    .contact-schedule,
    .cta-content,
    .cta-icon {
      opacity: 1;
      transform: none;
      transition: none;
      animation: none;
    }
  }
</style>

<script>
  // ========================================
  // Contact Page - Scroll Reveal Animation
  // ========================================
  const initContactAnimations = () => {
    // Elements to animate
    const officesSection = document.querySelector('#offices-section');
    const officesHeader = document.querySelector('.offices-header');
    const officeCards = document.querySelectorAll('.office-card');

    const contactInfoSection = document.querySelector('#contact-info');
    const contactInfoCards = document.querySelectorAll('.contact-info-card');
    const contactSchedule = document.querySelector('.contact-schedule');

    const ctaSection = document.querySelector('#contact-cta');
    const ctaContent = document.querySelector('.cta-content');

    // Check for reduced motion preference
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    if (prefersReducedMotion) {
      // Show everything immediately without animation
      officesHeader?.classList.add('visible');
      officeCards.forEach(card => card.classList.add('visible'));
      contactInfoCards.forEach(card => card.classList.add('visible'));
      contactSchedule?.classList.add('visible');
      ctaContent?.classList.add('visible');
      return;
    }

    // Observer options matching existing patterns
    const observerOptions = {
      threshold: 0.15,
      rootMargin: '0px 0px -50px 0px'
    };

    // ========================================
    // Offices Section Observer
    // ========================================
    let officesAnimated = false;

    const officesObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting && !officesAnimated) {
          officesAnimated = true;

          // Animate header first
          officesHeader?.classList.add('visible');

          // Then animate cards with stagger
          officeCards.forEach((card, index) => {
            setTimeout(() => {
              card.classList.add('visible');
            }, 200 + (index * 150));
          });

          officesObserver.disconnect();
        }
      });
    }, observerOptions);

    if (officesSection) {
      officesObserver.observe(officesSection);
    }

    // ========================================
    // Contact Info Section Observer
    // ========================================
    let contactInfoAnimated = false;

    const contactInfoObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting && !contactInfoAnimated) {
          contactInfoAnimated = true;

          // Animate cards with stagger
          contactInfoCards.forEach((card, index) => {
            setTimeout(() => {
              card.classList.add('visible');
            }, 100 + (index * 100));
          });

          // Animate schedule after cards
          setTimeout(() => {
            contactSchedule?.classList.add('visible');
          }, 400);

          contactInfoObserver.disconnect();
        }
      });
    }, observerOptions);

    if (contactInfoSection) {
      contactInfoObserver.observe(contactInfoSection);
    }

    // ========================================
    // CTA Section Observer
    // ========================================
    let ctaAnimated = false;

    const ctaObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting && !ctaAnimated) {
          ctaAnimated = true;
          ctaContent?.classList.add('visible');
          ctaObserver.disconnect();
        }
      });
    }, { threshold: 0.2, rootMargin: '0px 0px -30px 0px' });

    if (ctaSection) {
      ctaObserver.observe(ctaSection);
    }

    // ========================================
    // Chrome Fallback - 500ms timeout
    // ========================================
    setTimeout(() => {
      const isVisible = (el: Element | null): boolean => {
        if (!el) return false;
        const rect = el.getBoundingClientRect();
        return rect.top < window.innerHeight && rect.bottom >= 0;
      };

      // Offices section fallback
      if (!officesAnimated && officesSection && isVisible(officesSection)) {
        officesAnimated = true;
        officesHeader?.classList.add('visible');
        officeCards.forEach((card, index) => {
          setTimeout(() => card.classList.add('visible'), 200 + (index * 150));
        });
        officesObserver.disconnect();
      }

      // Contact info section fallback
      if (!contactInfoAnimated && contactInfoSection && isVisible(contactInfoSection)) {
        contactInfoAnimated = true;
        contactInfoCards.forEach((card, index) => {
          setTimeout(() => card.classList.add('visible'), 100 + (index * 100));
        });
        setTimeout(() => contactSchedule?.classList.add('visible'), 400);
        contactInfoObserver.disconnect();
      }

      // CTA section fallback
      if (!ctaAnimated && ctaSection && isVisible(ctaSection)) {
        ctaAnimated = true;
        ctaContent?.classList.add('visible');
        ctaObserver.disconnect();
      }
    }, 500);
  };

  // Run on DOM ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initContactAnimations);
  } else {
    initContactAnimations();
  }
</script>
