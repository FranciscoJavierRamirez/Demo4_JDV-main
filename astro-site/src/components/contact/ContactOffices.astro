        rel="noopener noreferrer"
        class="contact-cta-main inline-flex items-center gap-3 px-8 py-4 rounded-xl bg-[var(--gold)] text-[var(--gray-900)] font-bold text-lg no-underline transition-all duration-200 shadow-[0_4px_20px_rgba(201,169,97,0.4)] hover:shadow-[0_8px_30px_rgba(201,169,97,0.5)] hover:-translate-y-0.5 relative overflow-hidden"
