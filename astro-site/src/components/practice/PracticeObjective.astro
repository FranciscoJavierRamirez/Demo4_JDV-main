    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    filter: drop-shadow(0 4px 12px rgba(0, 0, 0, 0.3));
    margin-bottom: 1rem;
  }

  .section-line {
    width: 5rem;
    height: 3px;
    background: linear-gradient(to right, var(--gold, #C9A961), transparent);
    margin: 0 auto;
    border-radius: 9999px;
    opacity: 0.8;
  }

  /* ========================================
     MAIN QUOTE BOX
     ======================================== */
