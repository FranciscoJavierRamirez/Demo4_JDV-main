---
interface Props {
  text: string;
  commitments: string[];
}

const { text, commitments } = Astro.props;

// Iconos predeterminados para cada commitment
const defaultIcons = ['üí°', '‚öñÔ∏è', 'ü§ù', 'üéØ', '‚ú®', 'üõ°Ô∏è'];

// Funci√≥n para parsear "T√≠tulo: descripci√≥n" en { title, description }
function parseCommitment(commitment: string): { title: string; description: string } {
  const colonIndex = commitment.indexOf(':');
  if (colonIndex > 0) {
    return {
      title: commitment.substring(0, colonIndex).trim(),
      description: commitment.substring(colonIndex + 1).trim()
    };
  }
  // Si no hay ":", usar todo como t√≠tulo
  return { title: commitment.trim(), description: '' };
}

const parsedCommitments = commitments.map(parseCommitment);
