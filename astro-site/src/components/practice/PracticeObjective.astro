---
interface Props {
  text: string;
  commitments: string[];
}

const { text, commitments } = Astro.props;
---

<section class="practice-objective">
  <div class="container">
    <div class="objective-content">
      <h2>Mi compromiso contigo</h2>
      <p class="objective-text">{text}</p>
      <ul class="commitments-list">
        {commitments.map((commitment) => (
          <li class="commitment-item">
            <i class="fas fa-check-circle"></i>
            <span>{commitment}</span>
          </li>
        ))}
      </ul>
    </div>
  </div>
</section>

<style>
  .practice-objective {
    padding: var(--space-16) 0;
    background: linear-gradient(135deg, var(--blue-primary) 0%, var(--blue-dark) 100%);
    color: white;
    position: relative;
    overflow: hidden;
  }

  .practice-objective::before {
    content: '';
    position: absolute;
    bottom: -50%;
    left: -10%;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.08) 0%, transparent 70%);
    border-radius: 50%;
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 var(--space-6);
    position: relative;
    z-index: 1;
  }

  .objective-content {
    text-align: center;
  }

  .practice-objective h2 {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 2.5rem);
    margin-bottom: var(--space-6);
    font-weight: 700;
  }

  .objective-text {
    font-size: 1.25rem;
    line-height: 1.8;
    margin-bottom: var(--space-10);
    opacity: 0.95;
    font-weight: 400;
  }

  .commitments-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-5);
    text-align: left;
  }

  .commitment-item {
    display: flex;
    align-items: flex-start;
    gap: var(--space-3);
    padding: var(--space-4);
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .commitment-item i {
    color: var(--gold);
    font-size: 1.25rem;
    flex-shrink: 0;
    margin-top: 2px;
  }

  .commitment-item span {
    font-size: 0.9375rem;
    line-height: 1.7;
    font-weight: 400;
  }

  @media (max-width: 768px) {
    .practice-objective {
      padding: var(--space-12) 0;
    }

    .commitments-list {
      grid-template-columns: 1fr;
    }

    .objective-text {
      font-size: 1.125rem;
    }
  }
</style>
