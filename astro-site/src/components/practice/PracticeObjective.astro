    mix-blend-mode: screen;
  }

  .objective-orb-1 {
    top: -15%;
    right: 5%;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(201, 162, 84, 0.2) 0%, transparent 70%);
    animation: objectiveOrbFloat 20s ease-in-out infinite;
  }

  .objective-orb-2 {
    bottom: -20%;
    left: 10%;
    width: 450px;
    height: 450px;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.2) 0%, transparent 70%);
    animation: objectiveOrbFloat 25s ease-in-out infinite reverse;
  }

  .objective-orb-3 {
    top: 50%;
    left: 40%;
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(201, 162, 84, 0.12) 0%, transparent 70%);
    animation: objectiveOrbFloat 15s ease-in-out infinite 5s;
  }

  @keyframes objectiveOrbFloat {
    0%, 100% {
      transform: translate(0, 0) scale(1);
      opacity: 0.7;
    }
    33% {
      transform: translate(40px, -50px) scale(1.08);
      opacity: 1;
    }
    66% {
      transform: translate(-30px, 30px) scale(0.95);
      opacity: 0.8;
    }
  }

  .objective-grid {
    position: absolute;
    inset: 0;
    background-image:
