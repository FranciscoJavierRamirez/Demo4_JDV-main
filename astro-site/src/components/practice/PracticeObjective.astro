<script>
  // ========================================
  // Practice Objective - Premium Scroll Reveal Animation
  // Optimized for Mobile Experience
  // ========================================
  const initObjectiveAnimation = () => {
    const section = document.getElementById('practice-objective');
    if (!section) return;

    const header = section.querySelector('.objective-header-reveal');
    const main = section.querySelector('.objective-main-reveal');
    const cards = section.querySelectorAll('.commitment-card-reveal');

    // Check for reduced motion preference
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    if (prefersReducedMotion) {
      // Show everything immediately without animation
      header?.classList.add('visible');
      main?.classList.add('visible');
      cards.forEach(card => card.classList.add('visible'));
      return;
    }

    // Detect mobile for optimized thresholds
    const isMobile = window.innerWidth < 768;
    const isSmallMobile = window.innerWidth < 480;

    // Mobile-optimized observer options - trigger earlier for smoother experience
    const sectionObserverOptions: IntersectionObserverInit = {
      threshold: isMobile ? 0.08 : 0.15,
      rootMargin: isMobile ? '0px 0px -20px 0px' : '0px 0px -50px 0px'
    };

    // Observer for header and main quote
    const headerObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // Animate header
          header?.classList.add('visible');

          // Animate main quote with slight delay
          setTimeout(() => {
            main?.classList.add('visible');
          }, isMobile ? 150 : 100);

          headerObserver.disconnect();
        }
      });
    }, sectionObserverOptions);

    if (header) {
      headerObserver.observe(header);
    }

    // Individual card observers for smoother mobile scrolling
    // Each card animates as it enters the viewport
    if (isMobile) {
      const cardObserverOptions: IntersectionObserverInit = {
        threshold: isSmallMobile ? 0.15 : 0.2,
        rootMargin: '0px 0px -10px 0px'
      };

      cards.forEach((card, index) => {
        const cardObserver = new IntersectionObserver((entries) => {
          if (entries[0].isIntersecting) {
            // Small delay based on index for cascade effect when multiple cards visible
            const baseDelay = isSmallMobile ? 50 : 30;
            setTimeout(() => {
              card.classList.add('visible');
            }, index * baseDelay);
            cardObserver.disconnect();
          }
        }, cardObserverOptions);

        cardObserver.observe(card);
      });
    } else {
      // Desktop behavior - reveal all cards together with stagger
      const cardsObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            cards.forEach((card, index) => {
              setTimeout(() => {
                card.classList.add('visible');
              }, 300 + (index * 100));
            });
            cardsObserver.disconnect();
          }
        });
      }, {
        threshold: 0.15,
        rootMargin: '0px 0px -50px 0px'
      });

      const grid = section.querySelector('.commitment-grid');
      if (grid) {
        cardsObserver.observe(grid);
      }
    }
  };

  // Run on DOM ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initObjectiveAnimation);
  } else {
    initObjectiveAnimation();
  }

  // Re-initialize on resize if crossing mobile breakpoint
  let lastIsMobile = window.innerWidth < 768;
  window.addEventListener('resize', () => {
    const currentIsMobile = window.innerWidth < 768;
    if (currentIsMobile !== lastIsMobile) {
      lastIsMobile = currentIsMobile;
      // Cards already visible don't need re-animation
    }
  }, { passive: true });
</script>
