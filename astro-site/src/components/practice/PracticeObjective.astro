  /* ========================================
     PREMIUM COMMITMENT CARDS
     ======================================== */
  .commitment-card {
    position: relative;
    text-align: center;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 24px;
    overflow: hidden;
    /* Transiciones espec√≠ficas para mejor control */
    transition:
      transform 0.35s cubic-bezier(0.16, 1, 0.3, 1),
      background 0.35s ease,
      border-color 0.35s ease,
      box-shadow 0.35s ease;
  }

  /* Hover gradient glow overlay - sutil como Benefits.astro */
  .commitment-hover-glow {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom right,
      transparent 0%,
      transparent 60%,
      rgba(201, 162, 84, 0.06) 100%
    );
    opacity: 0;
    transition: opacity 0.5s ease;
    pointer-events: none;
  }

  .commitment-card:hover {
    transform: translateY(-5px);
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(201, 162, 84, 0.25);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.35);
  }

  .commitment-card:hover .commitment-hover-glow {
    opacity: 1;
  }

  /* Icon wrapper */
  .commitment-icon-wrapper {
    position: relative;
    width: 4rem;
    height: 4rem;
    margin: 0 auto 1.25rem;
  }

  /* Glow detr√°s del icono - m√°s sutil */
  .commitment-icon-glow {
    position: absolute;
    inset: -8px;
    background: radial-gradient(circle, rgba(201, 162, 84, 0.2) 0%, transparent 70%);
    border-radius: 50%;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .commitment-card:hover .commitment-icon-glow {
    opacity: 1;
  }

  .commitment-icon {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom right,
      rgba(255, 255, 255, 0.1) 0%,
      rgba(255, 255, 255, 0.05) 100%
    );
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    font-size: 1.5rem;
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.05);
    /* Hover transitions - consistente con Benefits.astro */
    transition: all 0.3s ease;
  }

  /* Hover state - estilo elegante como Benefits.astro */
  .commitment-card-reveal.visible:hover .commitment-icon {
    transform: scale(1.1) !important;
    border-color: rgba(201, 162, 84, 0.3) !important;
  }

  /* Title */
  .commitment-title {
    font-family: var(--font-display);
    font-size: 1.0625rem;
    font-weight: 700;
    color: white;
    margin: 0 0 0.5rem 0;
    line-height: 1.4;
    transition: color 0.3s ease;
  }

  .commitment-card:hover .commitment-title {
    color: var(--gold-light, #E5D5AA);
  }

  /* Description */
  .commitment-description {
    font-size: 0.875rem;
    line-height: 1.65;
    color: rgba(255, 255, 255, 0.7);
    margin: 0;
    font-weight: 400;
    transition: color 0.3s ease;
  }

  .commitment-card:hover .commitment-description {
    color: rgba(255, 255, 255, 0.9);
  }

  /* ========================================
     SCROLL REVEAL ANIMATIONS
     ======================================== */

  /* Header - fade down with scale */
  .objective-header-reveal {
    opacity: 0;
    transform: translateY(-20px) scale(0.98);
    transition:
      opacity 0.7s cubic-bezier(0.16, 1, 0.3, 1),
      transform 0.7s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .objective-header-reveal.visible {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  /* Main quote - fade up with scale */
  .objective-main-reveal {
    opacity: 0;
    transform: translateY(30px) scale(0.98);
    transition:
      opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1),
      transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .objective-main-reveal.visible {
    opacity: 1;
    transform: translateY(0) scale(1);
    transition-delay: 0.15s;
  }

  /* Cards - fade up with stagger */
  .commitment-card-reveal {
    opacity: 0;
    transform: translateY(40px) scale(0.95);
  }

  .commitment-card-reveal.visible {
    opacity: 1;
    transform: translateY(0) scale(1);
    transition:
      opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1),
      transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  /* Staggered delays */
  .commitment-card-reveal[data-index="0"].visible { transition-delay: 0ms; }
  .commitment-card-reveal[data-index="1"].visible { transition-delay: 100ms; }
  .commitment-card-reveal[data-index="2"].visible { transition-delay: 200ms; }
  .commitment-card-reveal[data-index="3"].visible { transition-delay: 300ms; }
  .commitment-card-reveal[data-index="4"].visible { transition-delay: 400ms; }
  .commitment-card-reveal[data-index="5"].visible { transition-delay: 500ms; }

  /* Icon reveal animation - estado inicial SOLO antes de visible */
  .commitment-card-reveal:not(.visible) .commitment-icon {
    opacity: 0;
    transform: scale(0.8) rotate(-10deg);
  }

  /* Animaci√≥n del icono al hacerse visible */
  .commitment-card-reveal.visible .commitment-icon {
    animation: objectiveIconReveal 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  /* Staggered icon animation delays */
  .commitment-card-reveal[data-index="0"].visible .commitment-icon { animation-delay: 0.2s; }
  .commitment-card-reveal[data-index="1"].visible .commitment-icon { animation-delay: 0.3s; }
  .commitment-card-reveal[data-index="2"].visible .commitment-icon { animation-delay: 0.4s; }
  .commitment-card-reveal[data-index="3"].visible .commitment-icon { animation-delay: 0.5s; }
  .commitment-card-reveal[data-index="4"].visible .commitment-icon { animation-delay: 0.6s; }
  .commitment-card-reveal[data-index="5"].visible .commitment-icon { animation-delay: 0.7s; }

  @keyframes objectiveIconReveal {
    0% {
      opacity: 0;
      transform: scale(0.8) rotate(-10deg);
    }
    50% {
      opacity: 1;
      transform: scale(1.12) rotate(4deg);
    }
    100% {
      opacity: 1;
      transform: scale(1) rotate(0deg);
    }
  }

  /* ========================================
     PREMIUM MOBILE KEYFRAMES
     ======================================== */

  /* Mobile slide up with blur - Premium entrance */
  @keyframes mobileSlideUp {
    0% {
      opacity: 0;
      transform: translateY(50px) scale(0.92);
      filter: blur(4px);
    }
    60% {
      filter: blur(0);
    }
    100% {
      opacity: 1;
      transform: translateY(0) scale(1);
      filter: blur(0);
    }
  }

  /* Mobile card reveal with glow pulse */
  @keyframes mobileCardReveal {
    0% {
      opacity: 0;
      transform: translateY(35px) scale(0.94);
      box-shadow: 0 0 0 rgba(201, 162, 84, 0);
    }
    50% {
      box-shadow: 0 8px 32px rgba(201, 162, 84, 0.12);
    }
    100% {
      opacity: 1;
      transform: translateY(0) scale(1);
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
    }
  }

  /* Mobile icon spring effect - more playful */
  @keyframes mobileIconSpring {
    0% {
      opacity: 0;
      transform: scale(0.4) rotate(-25deg);
    }
    40% {
      opacity: 1;
      transform: scale(1.2) rotate(10deg);
    }
    60% {
      transform: scale(0.9) rotate(-5deg);
    }
    80% {
      transform: scale(1.05) rotate(2deg);
    }
    100% {
      opacity: 1;
      transform: scale(1) rotate(0);
    }
  }

  /* Mobile title slide from left */
  @keyframes mobileTitleSlide {
    0% {
      opacity: 0;
      transform: translateX(-20px);
    }
    100% {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* Mobile description fade with slight rise */
  @keyframes mobileDescFade {
    0% {
      opacity: 0;
      transform: translateY(10px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Mobile quote box premium reveal */
  @keyframes mobileQuoteReveal {
    0% {
      opacity: 0;
      transform: translateY(40px) scale(0.94);
      box-shadow: 0 0 0 rgba(201, 162, 84, 0);
    }
    60% {
      box-shadow: 0 12px 40px rgba(201, 162, 84, 0.1);
    }
    100% {
      opacity: 1;
      transform: translateY(0) scale(1);
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    }
  }

  /* Mobile header badge float in */
  @keyframes mobileBadgeFloat {
    0% {
      opacity: 0;
      transform: translateY(-15px) scale(0.9);
    }
    60% {
      transform: translateY(3px) scale(1.02);
    }
    100% {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  /* Section line expand animation */
  @keyframes mobileLineExpand {
    0% {
      transform: scaleX(0);
      opacity: 0;
    }
    100% {
      transform: scaleX(1);
      opacity: 0.8;
    }
  }

  /* ========================================
     RESPONSIVE
     ======================================== */
  @media (max-width: 1024px) {
    .practice-objective {
      padding: 5rem 0;
    }

    .commitment-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* ========================================
     TABLET & MOBILE PREMIUM ANIMATIONS
     ======================================== */
  @media (max-width: 768px) {
    .practice-objective {
      padding: 4rem 0;
    }

    .section-header {
      margin-bottom: 2.5rem;
    }

    .objective-text-wrapper {
      padding: 2rem 1.5rem;
      border-radius: 20px;
    }

    .objective-quote-icon {
      top: 1rem;
      left: 1rem;
      width: 2rem;
      height: 2rem;
      font-size: 1.125rem;
    }

    .objective-quote-icon.objective-quote-right {
      bottom: 1rem;
      right: 1rem;
    }

    .objective-main {
      margin-bottom: 2.5rem;
    }

    .commitment-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .commitment-card {
      padding: 1.5rem 1.25rem;
      border-radius: 20px;
    }

    .commitment-icon-wrapper {
      width: 3rem;
      height: 3rem;
      margin-bottom: 1rem;
    }

    .commitment-icon {
      font-size: 1.25rem;
      border-radius: 0.75rem;
    }

    .commitment-title {
      font-size: 0.9375rem;
      margin-bottom: 0.375rem;
    }

    .commitment-description {
      font-size: 0.8125rem;
    }

    /* === MOBILE PREMIUM ANIMATIONS === */

    /* Header badge with float animation */
    .objective-header-reveal .section-badge {
      opacity: 0;
      transform: translateY(-15px) scale(0.9);
    }

    .objective-header-reveal.visible .section-badge {
      animation: mobileBadgeFloat 0.7s cubic-bezier(0.16, 1, 0.3, 1) forwards;
      animation-delay: 0.1s;
    }

    /* Section line with expand animation */
    .objective-header-reveal .section-line {
      transform: scaleX(0);
      transform-origin: center;
      opacity: 0;
    }

    .objective-header-reveal.visible .section-line {
      animation: mobileLineExpand 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
      animation-delay: 0.4s;
    }

    /* Quote box with premium reveal */
    .objective-main-reveal {
      opacity: 0;
      transform: translateY(40px) scale(0.94);
    }

    .objective-main-reveal.visible {
      animation: mobileQuoteReveal 0.9s cubic-bezier(0.16, 1, 0.3, 1) forwards;
      animation-delay: 0.2s;
    }

    /* Cards with premium mobile animation */
    .commitment-card-reveal {
      opacity: 0;
      transform: translateY(35px) scale(0.94);
      will-change: opacity, transform;
    }

    .commitment-card-reveal.visible {
      animation: mobileCardReveal 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    /* Mobile-optimized stagger delays (tablet - 2 columns) */
    .commitment-card-reveal[data-index="0"].visible { animation-delay: 0ms; }
    .commitment-card-reveal[data-index="1"].visible { animation-delay: 80ms; }
    .commitment-card-reveal[data-index="2"].visible { animation-delay: 160ms; }
