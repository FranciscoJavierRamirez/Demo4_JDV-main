---
interface ServiceItem {
  icon: string;
  title: string;
  description: string;
}

interface Props {
  items: ServiceItem[];
}

const { items } = Astro.props;
---

<section class="services-included">
  <div class="container">
    <div class="section-header">
      <h2>Servicios incluidos</h2>
      <p>Esta área de práctica incluye:</p>
    </div>
    <div class="services-grid">
      {items.map((item) => (
        <div class="service-card">
          <div class="service-header">
            <span class="service-icon">{item.icon}</span>
            <h3>{item.title}</h3>
          </div>
          <p>{item.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .services-included {
    padding: var(--space-16) 0;
    background: var(--gray-50);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-6);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-12);
  }

  .section-header h2 {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 2.5rem);
    color: var(--gray-900);
    margin-bottom: var(--space-4);
    font-weight: 700;
  }

  .section-header p {
    font-size: 1.125rem;
    color: var(--gray-600);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--space-6);
  }

  .service-card {
    background: white;
    padding: var(--space-6);
    border-radius: 12px;
    border: 1px solid var(--gray-200);
    transition: all var(--transition-base);
  }

  .service-card:hover {
    border-color: var(--blue-primary);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.06);
    transform: translateY(-2px);
  }

  .service-header {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-3);
  }

  .service-icon {
    font-size: 2rem;
    flex-shrink: 0;
  }

  .service-card h3 {
    font-family: var(--font-sans);
    font-size: 1.125rem;
    color: var(--gray-900);
    font-weight: 600;
    margin: 0;
  }

  .service-card p {
    font-size: 0.9375rem;
    color: var(--gray-600);
    line-height: 1.7;
    margin: 0;
  }

  @media (max-width: 768px) {
    .services-included {
      padding: var(--space-12) 0;
    }

    .services-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
