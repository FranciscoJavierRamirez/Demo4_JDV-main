---
interface Props {
  areaName: string;
  areaSlug: string;
  breadcrumbTitle?: string;
}

const { areaName, areaSlug, breadcrumbTitle } = Astro.props;

// Usa breadcrumbTitle si está definido, de lo contrario usa areaName
const displayTitle = breadcrumbTitle || areaName;
---

<nav class="breadcrumbs" aria-label="Breadcrumb">
  <div class="container">
    <ol class="breadcrumb-list" itemscope itemtype="https://schema.org/BreadcrumbList">
      <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
        <a href="/" itemprop="item">
          <i class="fas fa-home"></i>
          <span itemprop="name">Inicio</span>
        </a>
        <meta itemprop="position" content="1" />
      </li>
      <li class="separator" aria-hidden="true">
        <i class="fas fa-chevron-right"></i>
      </li>
      <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
        <a href="/#areas" itemprop="item">
          <span itemprop="name">Áreas de Práctica</span>
        </a>
        <meta itemprop="position" content="2" />
      </li>
      <li class="separator" aria-hidden="true">
        <i class="fas fa-chevron-right"></i>
      </li>
      <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem" class="current">
        <span itemprop="name" aria-current="page">{displayTitle}</span>
        <meta itemprop="position" content="3" />
      </li>
    </ol>
  </div>
</nav>

<style>
  .breadcrumbs {
    position: relative;
    margin-top: 72px; /* Altura del header fijo */
    padding: var(--space-4) 0;
    background: linear-gradient(180deg, #0c2340 0%, #122c4d 100%);
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    overflow: hidden;
  }

  /* Subtle blur overlay */
  .breadcrumbs::before {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(12, 35, 64, 0.5);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    z-index: 1;
    pointer-events: none;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-6);
    position: relative;
    z-index: 10;
  }

  .breadcrumb-list {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-2);
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .breadcrumb-list li {
    display: flex;
    align-items: center;
  }

  .breadcrumb-list a {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    padding: var(--space-2) var(--space-3);
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .breadcrumb-list a:hover {
    color: var(--gold);
    background: rgba(255, 255, 255, 0.08);
  }

  .breadcrumb-list a i {
    font-size: 0.8125rem;
    transition: transform 0.3s ease;
  }

  .breadcrumb-list a:hover i {
    transform: scale(1.1);
  }

  .separator {
    color: rgba(255, 255, 255, 0.3);
    font-size: 0.625rem;
  }

  .current {
    color: var(--gold);
    font-size: 0.875rem;
    font-weight: 600;
    padding: var(--space-2) var(--space-3);
    background: rgba(201, 169, 97, 0.1);
    border: 1px solid rgba(201, 169, 97, 0.2);
    border-radius: 8px;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .breadcrumb-list {
      gap: var(--space-1);
    }

    .breadcrumb-list a {
      font-size: 0.8125rem;
      padding: var(--space-1) var(--space-2);
    }

    .current {
      font-size: 0.8125rem;
      padding: var(--space-1) var(--space-2);
    }

    /* Hide "Áreas de Práctica" on very small screens */
    .breadcrumb-list li:nth-child(3),
    .breadcrumb-list li:nth-child(4) {
      display: none;
    }

    @media (min-width: 480px) {
      .breadcrumb-list li:nth-child(3),
      .breadcrumb-list li:nth-child(4) {
        display: flex;
      }
    }
  }
</style>
