---
interface Props {
  badge: string;
  h1: string;
  tagline: string;
  image?: string;
}

const { badge, h1, tagline, image } = Astro.props;
---

<section class="practice-hero">
  <!-- Complex Mesh Gradient Background -->
  <div class="hero-bg-mesh">
    <div class="hero-orb hero-orb-1"></div>
    <div class="hero-orb hero-orb-2"></div>
    <div class="hero-orb hero-orb-3"></div>
  </div>

  <!-- Grid Pattern Overlay -->
  <div class="hero-grid-pattern"></div>

  <!-- Noise Texture -->
  <div class="hero-noise"></div>

  <!-- Background Image with enhanced visibility -->
  {image && (
    <div class="hero-image-container">
      <img
        src={image}
        alt=""
        class="hero-image"
        loading="eager"
      />
      <div class="hero-image-overlay"></div>
    </div>
  )}

  <!-- Gradient Overlay for Legibility -->
  <div class="hero-gradient-overlay"></div>

  <div class="container">
    <div class="practice-hero-content">
      <!-- Badge with animation - Style matching Hero.astro -->
      <div class="practice-badge hero-animate" style="--delay: 0s">
        <i class="fas fa-gavel text-gold"></i>
        <span class="badge-text">{badge}</span>
      </div>

      <!-- Title with gradient - Style matching Hero.astro -->
      <h1 class="hero-animate" style="--delay: 0.1s">
        <span class="title-gradient">{h1}</span>
      </h1>

      <!-- Tagline with animation -->
      <p class="tagline hero-animate" style="--delay: 0.25s">{tagline}</p>

      <!-- CTA Buttons with premium style matching Hero.astro -->
      <div class="hero-actions hero-animate" style="--delay: 0.4s">
        <a
          href="/formulario-contacto"
          class="btn btn-primary group"
        >
          <span class="btn-shimmer"></span>
          <span class="btn-text">Agendar Consulta</span>
          <i class="fas fa-calendar-check btn-icon"></i>
        </a>
        <a href="tel:+56941692900" class="btn btn-secondary">
          <i class="fas fa-phone"></i>
          <span>Llamar Ahora</span>
        </a>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="scroll-indicator hero-animate" style="--delay: 0.55s">
    <div class="scroll-icon">
      <i class="fas fa-chevron-down"></i>
    </div>
    <span>Conoce m√°s</span>
  </div>
</section>

<style>
  .practice-hero {
    position: relative;
    min-height: 85vh;
    display: flex;
    align-items: center;
    padding: var(--space-24) 0 var(--space-20);
    overflow: hidden;
    background: var(--blue-deeper, #0c2340);
  }

  /* ========================================
     MESH GRADIENT BACKGROUND
     ======================================== */
  .hero-bg-mesh {
    position: absolute;
    inset: 0;
    z-index: 0;
    overflow: hidden;
  }

  .hero-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
  }

  .hero-orb-1 {
    top: -20%;
    left: -10%;
    width: 70%;
    height: 70%;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.4) 0%, transparent 70%);
    animation: float 20s ease-in-out infinite;
  }

  .hero-orb-2 {
    bottom: -10%;
    right: -5%;
    width: 60%;
    height: 60%;
    background: radial-gradient(circle, rgba(29, 78, 216, 0.4) 0%, transparent 70%);
    animation: float 25s ease-in-out infinite reverse;
  }

  .hero-orb-3 {
    top: 40%;
    left: 30%;
    width: 40%;
    height: 40%;
    background: radial-gradient(circle, rgba(201, 162, 84, 0.15) 0%, transparent 70%);
    animation: float 15s ease-in-out infinite 5s;
  }

  @keyframes float {
    0%, 100% { transform: translate(0, 0) scale(1); }
    33% { transform: translate(30px, -30px) scale(1.05); }
    66% { transform: translate(-20px, 20px) scale(0.95); }
  }

  /* Grid Pattern */
  .hero-grid-pattern {
    position: absolute;
    inset: 0;
    z-index: 1;
    background-image:
      linear-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.03) 1px, transparent 1px);
    background-size: 50px 50px;
    pointer-events: none;
  }

  /* Noise Texture */
  .hero-noise {
    position: absolute;
    inset: 0;
    z-index: 2;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
    opacity: 0.03;
    pointer-events: none;
    mix-blend-mode: overlay;
  }

  /* Background Image */
  .hero-image-container {
    position: absolute;
    inset: 0;
    z-index: 4;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    opacity: 0.45;
    filter: saturate(1.1) contrast(1.05);
  }

  .hero-image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(12, 35, 64, 0.6) 0%,
      rgba(26, 77, 122, 0.5) 50%,
      rgba(12, 35, 64, 0.6) 100%
    );
  }

  /* Gradient Overlay - Semi-transparent to show background image */
  .hero-gradient-overlay {
    position: absolute;
    inset: 0;
    z-index: 5;
    background: linear-gradient(
      to bottom right,
      rgba(12, 35, 64, 0.75) 0%,
      rgba(12, 35, 64, 0.65) 50%,
      rgba(26, 77, 122, 0.6) 100%
    );
  }

  /* ========================================
     CONTAINER & CONTENT
     ======================================== */
  .container {
    max-width: 1400px;
    width: 100%;
    margin: 0 auto;
    padding: 0 1rem;
    position: relative;
    z-index: 10;
  }

  @media (min-width: 640px) {
    .container {
      padding: 0 1.5rem;
    }
  }

  @media (min-width: 1024px) {
    .container {
      padding: 0 2rem;
    }
  }

  .practice-hero-content {
    max-width: 850px;
    margin: 0 auto;
    text-align: center;
    color: white;
  }

  /* ========================================
     BADGE - Premium Glass Style (matching Hero.astro)
     ======================================== */
  .practice-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 1rem;
    margin-bottom: 1.25rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 600;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .practice-badge .text-gold {
    color: var(--gold, #C9A961);
  }

  .badge-text {
    line-height: 1.4;
  }

  /* ========================================
     TITLE - With Gold Gradient (matching Hero.astro)
     ======================================== */
  .practice-hero h1 {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 5vw, 4rem);
    line-height: 1.05;
    margin-bottom: 1.25rem;
    font-weight: 900;
    letter-spacing: -0.02em;
  }

  .title-gradient {
    display: inline-block;
    background: linear-gradient(to bottom right, #FDFBF7, #E5D5AA, #C9A254);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    filter: drop-shadow(0 4px 12px rgba(0, 0, 0, 0.5));
  }

  /* ========================================
     TAGLINE
     ======================================== */
  .tagline {
    font-size: clamp(1rem, 2.5vw, 1.125rem);
    line-height: 1.7;
    margin-bottom: 2rem;
    color: rgba(255, 255, 255, 0.9);
    font-weight: 400;
    max-width: 580px;
    margin-left: auto;
    margin-right: auto;
  }

  /* ========================================
     CTA BUTTONS - Premium Style (matching Hero.astro)
     ======================================== */
  .hero-actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: center;
    align-items: center;
  }

  @media (min-width: 640px) {
    .hero-actions {
      flex-direction: row;
    }
  }

  .btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 1rem 1.5rem;
    font-size: 1rem;
    font-weight: 700;
    border-radius: 0.75rem;
    text-decoration: none;
    transition: all 0.2s ease;
    cursor: pointer;
    font-family: var(--font-sans);
    overflow: hidden;
  }

  /* Primary Button - Dark blue with gold text (matching Hero.astro) */
  .btn-primary {
    background: linear-gradient(to bottom right, #1a365d, #1e3a5f, #0f172a);
    border: 2px solid rgba(201, 169, 97, 0.4);
    box-shadow:
      0 4px 20px rgba(0, 0, 0, 0.3),
      0 0 30px rgba(201, 169, 97, 0.15);
  }

  .btn-primary:hover {
    transform: translateY(-2px) scale(1.02);
    border-color: rgba(201, 169, 97, 0.6);
    box-shadow:
      0 8px 30px rgba(0, 0, 0, 0.4),
      0 0 40px rgba(201, 169, 97, 0.25);
  }

  .btn-primary:active {
    transform: scale(0.98);
  }

  .btn-text {
    position: relative;
    z-index: 2;
    background: linear-gradient(to right, #C9A961, #E5D5AA, #D4AF37);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .btn-icon {
    position: relative;
    z-index: 2;
    color: #C9A961;
    transition: transform 0.2s ease;
  }

  .btn-primary:hover .btn-icon {
    transform: translateX(4px);
  }

  .btn-shimmer {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(201, 169, 97, 0.3), transparent);
    animation: shimmer 3s infinite;
    z-index: 1;
  }

  @keyframes shimmer {
    0% { left: -100%; }
    100% { left: 100%; }
  }

  /* Secondary Button - Glass style */
  .btn-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    border: 2px solid rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.5);
  }

  /* ========================================
     SCROLL INDICATOR
     ======================================== */
  .scroll-indicator {
    position: absolute;
    bottom: 0.75rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.375rem;
    color: white;
    opacity: 0.7;
    cursor: pointer;
    transition: all 0.2s ease;
    background: transparent;
    border: none;
  }

  @media (min-width: 640px) {
    .scroll-indicator {
      bottom: 1rem;
      gap: 0.5rem;
    }
  }

  .scroll-indicator:hover {
    opacity: 1;
    transform: translateX(-50%) translateY(2px);
  }

  .scroll-icon {
    width: 2.25rem;
    height: 2.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 9999px;
    animation: bounceArrow 2s ease-in-out infinite;
  }

  .scroll-icon i {
    color: var(--gold, #C9A961);
    font-size: 1rem;
  }

  .scroll-indicator span {
    font-size: 0.625rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    display: none;
  }

  @media (min-width: 640px) {
    .scroll-indicator span {
      display: block;
    }
  }

  @keyframes bounceArrow {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(6px); }
  }

  /* ========================================
     ANIMATIONS (matching Hero.astro)
     ======================================== */
  .hero-animate {
    opacity: 0;
  }

  /* Badge - slide in from top */
  .practice-badge.hero-animate {
    animation: slideInDown 0.6s ease-out forwards;
    animation-delay: var(--delay, 0s);
  }

  @keyframes slideInDown {
    from {
      opacity: 0;
      transform: translateY(-15px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Title, tagline, buttons - fade in up */
  h1.hero-animate,
  .tagline.hero-animate,
  .hero-actions.hero-animate {
    animation: fadeInUp 0.8s ease-out forwards;
    animation-delay: var(--delay, 0s);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Scroll indicator */
  .scroll-indicator.hero-animate {
    animation: fadeInUp 0.8s ease-out forwards;
    animation-delay: var(--delay, 0s);
  }

  /* ========================================
     RESPONSIVE
     ======================================== */
  @media (max-width: 768px) {
    .practice-hero {
      padding: var(--space-20, 5rem) 0 var(--space-16, 4rem);
      min-height: 80vh;
    }

    .hero-actions {
      width: 100%;
    }

    .btn {
      width: 100%;
    }

    .hero-image {
      opacity: 0.35;
    }

    .hero-gradient-overlay {
      background: linear-gradient(
        to bottom right,
        rgba(12, 35, 64, 0.82) 0%,
        rgba(12, 35, 64, 0.75) 50%,
        rgba(26, 77, 122, 0.7) 100%
      );
    }
  }

  /* ========================================
     REDUCED MOTION
     ======================================== */
  @media (prefers-reduced-motion: reduce) {
    .hero-orb-1,
    .hero-orb-2,
    .hero-orb-3 {
      animation: none;
    }

    .hero-animate {
      opacity: 1;
      animation: none;
    }

    .btn-shimmer {
      animation: none;
    }

    .scroll-icon {
      animation: none;
    }
  }
</style>
