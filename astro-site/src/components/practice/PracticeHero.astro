---
interface Props {
  badge: string;
  h1: string;
  tagline: string;
  image?: string;
}

const { badge, h1, tagline, image } = Astro.props;
---

<section class="practice-hero">
  <!-- Background Image with enhanced visibility -->
  {image && (
    <div class="hero-image-container">
      <img 
        src={image} 
        alt=""
        class="hero-image"
        loading="eager"
      />
      <div class="hero-image-overlay"></div>
    </div>
  )}
  
  <!-- Decorative animated orb -->
  <div class="hero-orb"></div>
  
  <div class="container">
    <div class="practice-hero-content">
      <span class="practice-badge">{badge}</span>
      <h1>{h1}</h1>
      <p class="tagline">{tagline}</p>
      <div class="hero-actions">
        <button class="btn btn-primary" onclick="openModal()">
          <i class="fas fa-calendar-check"></i>
          Agendar Consulta Gratuita
        </button>
        <a href="tel:+56912345678" class="btn btn-secondary">
          <i class="fas fa-phone"></i>
          Llamar Ahora
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .practice-hero {
    background: linear-gradient(135deg, var(--blue-primary) 0%, var(--blue-dark) 100%);
    color: white;
    padding: var(--space-20) 0 var(--space-16);
    position: relative;
    overflow: hidden;
    min-height: 50vh;
    display: flex;
    align-items: center;
  }

  /* Hero image with enhanced color */
  .hero-image-container {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    opacity: 0.45;
    filter: saturate(1.2) contrast(1.1);
  }

  .hero-image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(30, 64, 175, 0.85) 0%,
      rgba(59, 130, 246, 0.7) 50%,
      rgba(30, 64, 175, 0.8) 100%
    );
    mix-blend-mode: multiply;
  }

  /* Secondary overlay for text legibility */
  .hero-image-container::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(12, 35, 64, 0.3) 0%,
      rgba(12, 35, 64, 0.5) 100%
    );
  }

  .hero-orb {
    position: absolute;
    top: -50%;
    right: -10%;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
    border-radius: 50%;
    animation: float 25s ease-in-out infinite;
    z-index: 1;
  }

  @keyframes float {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(-30px, -30px); }
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-6);
    position: relative;
    z-index: 2;
  }

  .practice-hero-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .practice-badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    padding: var(--space-2) var(--space-4);
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: var(--space-6);
    border: 1px solid rgba(255, 255, 255, 0.3);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .practice-hero h1 {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    line-height: 1.2;
    margin-bottom: var(--space-6);
    font-weight: 700;
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  .tagline {
    font-size: clamp(1.125rem, 2vw, 1.5rem);
    line-height: 1.6;
    margin-bottom: var(--space-10);
    opacity: 0.95;
    font-weight: 400;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4);
    justify-content: center;
    align-items: center;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-4) var(--space-8);
    font-size: 1rem;
    font-weight: 600;
    border-radius: 12px;
    text-decoration: none;
    transition: all var(--transition-base);
    cursor: pointer;
    border: none;
    font-family: var(--font-sans);
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--gold) 0%, var(--gold-dark) 100%);
    color: var(--gray-900);
    box-shadow: 0 4px 20px rgba(201, 169, 97, 0.4);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 30px rgba(201, 169, 97, 0.5);
  }

  .btn-secondary {
    background: rgba(255, 255, 255, 0.15);
    color: white;
    border: 2px solid rgba(255, 255, 255, 0.4);
    backdrop-filter: blur(10px);
  }

  .btn-secondary:hover {
    background: white;
    color: var(--blue-primary);
    border-color: white;
  }

  @media (max-width: 768px) {
    .practice-hero {
      padding: var(--space-16) 0 var(--space-12);
      min-height: 60vh;
    }

    .hero-actions {
      flex-direction: column;
      width: 100%;
    }

    .btn {
      width: 100%;
      justify-content: center;
    }

    .hero-image {
      opacity: 0.35;
    }
  }
</style>
