---
interface Props {
  showHeader?: boolean;
  headerTitle?: string;
  headerBadge?: string;
}

const {
  showHeader = true,
  headerTitle = "Más información",
  headerBadge = "Detalle"
} = Astro.props;
---

<section class="practice-content" id="practice-content">
  <div class="container">
    {showHeader && (
      <div class="section-header content-header-reveal">
        <span class="section-badge">
          <i class="fas fa-file-alt"></i>
          <span>{headerBadge}</span>
        </span>
        <h2>{headerTitle}</h2>
        <div class="section-line"></div>
      </div>
    )}

    <div class="content-wrapper content-reveal">
      <slot />
    </div>
  </div>
</section>

<style>
  .practice-content {
    position: relative;
    padding: var(--space-16) 0;
    background: linear-gradient(180deg, #ffffff 0%, #f8fafc 50%, #ffffff 100%);
    overflow: hidden;
  }

  /* Subtle background decoration */
  .practice-content::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--gray-200), transparent);
  }

  .practice-content::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--gray-200), transparent);
  }

  /* ========================================
     CONTAINER
     ======================================== */
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 var(--space-6);
    position: relative;
    z-index: 10;
  }

  /* ========================================
     HEADER
     ======================================== */
  .section-header {
    text-align: center;
    margin-bottom: var(--space-10);
  }

  .section-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1.25rem;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    color: var(--gray-700);
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    border-radius: 9999px;
    margin-bottom: 1.25rem;
    border: 1px solid var(--gray-200);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  }

  .section-badge i {
    color: var(--gold);
    font-size: 0.875rem;
  }

  .section-header h2 {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    font-weight: 800;
    letter-spacing: -0.02em;
    background: linear-gradient(135deg, #1e3a5f 0%, #2563eb 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .section-line {
    width: 4rem;
    height: 3px;
    background: linear-gradient(to right, var(--blue-primary), var(--gold), transparent);
    margin: 0 auto;
    border-radius: 9999px;
    opacity: 0.8;
  }

  /* ========================================
     CONTENT WRAPPER - Premium Rich Text
     ======================================== */
  .content-wrapper {
    font-size: 1.0625rem;
    line-height: 1.85;
    color: var(--gray-700);
  }

  /* Headings */
  .content-wrapper :global(h2) {
    font-family: var(--font-display);
    font-size: clamp(1.5rem, 3vw, 1.875rem);
    color: var(--gray-900);
    margin-top: var(--space-10);
    margin-bottom: var(--space-5);
    font-weight: 700;
    letter-spacing: -0.01em;
    position: relative;
    padding-left: var(--space-4);
  }

  .content-wrapper :global(h2)::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.25em;
    bottom: 0.25em;
    width: 4px;
    background: linear-gradient(180deg, var(--blue-primary), var(--gold));
    border-radius: 2px;
  }

  .content-wrapper :global(h2:first-child) {
    margin-top: 0;
  }

  .content-wrapper :global(h3) {
    font-family: var(--font-sans);
    font-size: 1.375rem;
    color: var(--gray-900);
    margin-top: var(--space-8);
    margin-bottom: var(--space-4);
    font-weight: 600;
  }

  .content-wrapper :global(h4) {
    font-family: var(--font-sans);
    font-size: 1.125rem;
    color: var(--gray-800);
    margin-top: var(--space-6);
    margin-bottom: var(--space-3);
    font-weight: 600;
  }

  /* Paragraphs */
  .content-wrapper :global(p) {
    margin-bottom: var(--space-5);
  }

  /* Lists */
  .content-wrapper :global(ul),
  .content-wrapper :global(ol) {
    margin-bottom: var(--space-5);
    padding-left: var(--space-6);
  }

  .content-wrapper :global(li) {
    margin-bottom: var(--space-2);
    position: relative;
  }

  .content-wrapper :global(ul li)::marker {
    color: var(--blue-primary);
  }

  .content-wrapper :global(ol li)::marker {
    color: var(--blue-primary);
    font-weight: 600;
  }

  /* Strong text */
  .content-wrapper :global(strong) {
    color: var(--gray-900);
    font-weight: 600;
  }

  /* Links */
  .content-wrapper :global(a) {
    color: var(--blue-primary);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: all var(--transition-fast);
  }

  .content-wrapper :global(a:hover) {
    color: var(--blue-dark);
    border-bottom-color: var(--blue-dark);
  }

  /* Horizontal Rule - Premium Divider */
  .content-wrapper :global(hr) {
    border: none;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--gray-300), transparent);
    margin: var(--space-10) 0;
    position: relative;
  }

  .content-wrapper :global(hr)::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 8px;
    height: 8px;
    background: var(--gold);
    border-radius: 50%;
    box-shadow: 0 0 0 4px white;
  }

  /* Blockquotes - Premium Style */
  .content-wrapper :global(blockquote) {
    position: relative;
    border: none;
    padding: var(--space-6) var(--space-8);
    margin: var(--space-8) 0;
    background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
    border-radius: 16px;
    font-style: normal;
    color: var(--gray-800);
    box-shadow:
      0 4px 6px -1px rgba(59, 130, 246, 0.08),
      0 2px 4px -1px rgba(59, 130, 246, 0.04);
  }

  .content-wrapper :global(blockquote)::before {
    content: '"';
    position: absolute;
    top: -0.5rem;
    left: 1.5rem;
    font-size: 4rem;
    font-family: Georgia, serif;
    color: var(--blue-primary);
    opacity: 0.2;
    line-height: 1;
  }

  .content-wrapper :global(blockquote p) {
    margin-bottom: 0;
    position: relative;
    z-index: 1;
  }

  .content-wrapper :global(blockquote strong) {
    color: var(--blue-primary);
  }

  /* Code inline */
  .content-wrapper :global(code) {
    background: var(--gray-100);
    padding: 0.125em 0.375em;
    border-radius: 4px;
    font-size: 0.9em;
    color: var(--gray-800);
  }

  /* ========================================
     REVEAL ANIMATIONS
     ======================================== */
  .content-header-reveal {
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .content-header-reveal.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .content-reveal {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.7s cubic-bezier(0.16, 1, 0.3, 1) 0.15s;
  }

  .content-reveal.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* ========================================
     RESPONSIVE
     ======================================== */
  @media (max-width: 768px) {
    .practice-content {
      padding: var(--space-12) 0;
    }

    .content-wrapper {
      font-size: 1rem;
    }

    .content-wrapper :global(blockquote) {
      padding: var(--space-5) var(--space-6);
    }

    .content-wrapper :global(h2) {
      padding-left: var(--space-3);
    }
  }

  /* ========================================
     REDUCED MOTION
     ======================================== */
  @media (prefers-reduced-motion: reduce) {
    .content-header-reveal,
    .content-reveal {
      opacity: 1;
      transform: none;
      transition: none;
    }
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const section = document.getElementById('practice-content');
    if (!section) return;

    const header = section.querySelector('.content-header-reveal');
    const content = section.querySelector('.content-reveal');

    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    if (prefersReducedMotion) {
      header?.classList.add('visible');
      content?.classList.add('visible');
      return;
    }

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          header?.classList.add('visible');
          content?.classList.add('visible');
          observer.disconnect();
        }
      });
    }, { threshold: 0.1 });

    observer.observe(section);
  });
</script>
