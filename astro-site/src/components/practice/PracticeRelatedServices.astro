  .related-card-reveal[data-index="1"].visible { transition-delay: 150ms; }
  .related-card-reveal[data-index="2"].visible { transition-delay: 300ms; }

  /* ========================================
     PREMIUM KEYFRAMES - Mobile Animations
     ======================================== */
  
  /* Icon bounce reveal with rotation */
  @keyframes relatedIconReveal {
    0% {
      opacity: 0;
      transform: scale(0.7) rotate(-15deg);
    }
    60% {
      opacity: 1;
      transform: scale(1.15) rotate(5deg);
    }
    100% {
      opacity: 1;
      transform: scale(1) rotate(0deg);
    }
  }

  /* Title slide-up reveal */
  @keyframes relatedTitleReveal {
    0% {
      opacity: 0;
      transform: translateY(15px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Description fade-in */
  @keyframes relatedDescReveal {
    0% {
      opacity: 0;
      transform: translateY(10px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Arrow slide-in from left */
  @keyframes relatedArrowReveal {
    0% {
      opacity: 0;
      transform: translateX(-20px);
    }
    100% {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* Glow line reveal from center */
  @keyframes relatedGlowReveal {
    0% {
      transform: scaleX(0);
      opacity: 0;
    }
    50% {
      opacity: 1;
    }
    100% {
      transform: scaleX(1);
      opacity: 1;
    }
  }

  /* Section line animated reveal */
  @keyframes relatedLineReveal {
    0% {
      transform: scaleX(0);
      opacity: 0;
    }
    100% {
      transform: scaleX(1);
      opacity: 0.8;
    }
  }

  /* ========================================
     RESPONSIVE - Mobile Premium Animations
     ======================================== */
  @media (max-width: 768px) {
    .practice-related {
      padding: var(--space-16) 0;
    }

    .related-grid {
      grid-template-columns: 1fr;
      gap: var(--space-5);
    }

    .related-card {
      padding: var(--space-6);
    }

    /* Mobile: Enhanced blur-in animation for cards */
    .related-card-reveal {
      opacity: 0;
      transform: translateY(60px) scale(0.92);
      filter: blur(10px);
      transition: 
        opacity 0.7s cubic-bezier(0.16, 1, 0.3, 1),
        transform 0.8s cubic-bezier(0.34, 1.56, 0.64, 1),
        filter 0.6s ease-out;
    }

    .related-card-reveal.visible {
      opacity: 1;
      transform: translateY(0) scale(1);
      filter: blur(0);
    }

    /* Mobile: Remove stagger delays (cards animate individually) */
    .related-card-reveal[data-index="0"].visible,
    .related-card-reveal[data-index="1"].visible,
    .related-card-reveal[data-index="2"].visible {
      transition-delay: 0ms;
    }

    /* ========================================
       INTERNAL CONTENT STAGGER - Mobile
       ======================================== */
    
    /* Icon - starts hidden, animates on card visible */
    .related-card .related-icon {
      opacity: 0;
      transform: scale(0.7) rotate(-15deg);
    }

    .related-card.visible .related-icon {
      animation: relatedIconReveal 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
      animation-delay: 0.15s;
    }

    /* Title - starts hidden, slides up */
    .related-card h3 {
      opacity: 0;
      transform: translateY(15px);
    }

    .related-card.visible h3 {
      animation: relatedTitleReveal 0.5s cubic-bezier(0.16, 1, 0.3, 1) forwards;
      animation-delay: 0.25s;
    }

    /* Description - starts hidden, slides up */
    .related-card p {
      opacity: 0;
      transform: translateY(10px);
    }

    .related-card.visible p {
      animation: relatedDescReveal 0.5s cubic-bezier(0.16, 1, 0.3, 1) forwards;
      animation-delay: 0.35s;
    }

    /* Arrow - starts hidden, slides in from left */
    .related-arrow {
      opacity: 0;
      transform: translateX(-15px);
    }

    .related-card.visible .related-arrow {
      animation: relatedArrowReveal 0.4s cubic-bezier(0.16, 1, 0.3, 1) forwards;
      animation-delay: 0.45s;
    }

    /* Glow line - reveals from center on card visible */
    .card-glow {
      transform: scaleX(0);
      transform-origin: center;
    }

    .related-card.visible .card-glow {
      animation: relatedGlowReveal 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
      animation-delay: 0.5s;
    }

    /* ========================================
       TOUCH FEEDBACK - Mobile
       ======================================== */
    
    .related-card {
      -webkit-tap-highlight-color: transparent;
      touch-action: manipulation;
    }

    .related-card:active {
      transform: scale(0.98);
      transition: transform 0.15s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Softer active state for icon */
    .related-card:active .related-icon {
      transform: scale(0.95);
      transition: transform 0.15s ease;
    }

    /* Mobile: Smaller icon */
    .related-icon {
      width: 56px;
      height: 56px;
    }

    .related-icon span {
      font-size: 1.75rem;
    }

    /* Mobile: Adjust typography */
    .related-card h3 {
      font-size: 1.125rem;
    }

    .related-card p {
      font-size: 0.875rem;
    }

    /* Mobile: Section line animation */
    .section-line {
      transform: scaleX(0);
      transform-origin: left center;
    }

    .related-header-reveal.visible .section-line {
      animation: relatedLineReveal 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
      animation-delay: 0.3s;
    }
  }

  /* Small mobile devices */
  @media (max-width: 480px) {
    .related-card-reveal {
      transform: translateY(50px) scale(0.94);
      filter: blur(8px);
    }

    .related-icon {
      width: 52px;
      height: 52px;
    }

    .related-icon span {
      font-size: 1.5rem;
    }

    .related-card {
      padding: var(--space-5);
      border-radius: 16px;
