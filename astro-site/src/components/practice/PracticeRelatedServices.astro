<script is:inline>
  // ========================================
  // PracticeRelatedServices - Premium Mobile Animations
  // Individual card observers for smooth scroll reveal
  // ========================================
  const initRelatedAnimation = () => {
    const section = document.getElementById('related-services');
    if (!section) return;

    const header = section.querySelector('.related-header-reveal');
    const cards = section.querySelectorAll('.related-card-reveal');
    const viewAllWrapper = section.querySelector('.view-all-wrapper');

    // Check for reduced motion preference
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    if (prefersReducedMotion) {
      // Show everything immediately without animation
      header?.classList.add('visible');
      cards.forEach(card => card.classList.add('visible'));
      viewAllWrapper?.classList.add('visible');
      return;
    }

    // Detect mobile device
    const isMobile = window.innerWidth <= 768;

    // Header observer - triggers first
    const headerObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          header?.classList.add('visible');
          headerObserver.disconnect();
        }
      });
    }, { 
      threshold: 0.3,
      rootMargin: '0px 0px -50px 0px'
    });

    if (header) {
      headerObserver.observe(header);
    }

    // Individual card observers for mobile
    // Each card animates when it enters the viewport
    if (isMobile) {
      cards.forEach((card) => {
        const cardObserver = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              // Small delay for smoother feel
              requestAnimationFrame(() => {
                card.classList.add('visible');
              });
              cardObserver.disconnect();
            }
          });
        }, { 
          threshold: 0.15,
          rootMargin: '0px 0px -10% 0px'
        });
        
        cardObserver.observe(card);
      });

      // View All link observer for mobile
      if (viewAllWrapper) {
        const linkObserver = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              requestAnimationFrame(() => {
                viewAllWrapper.classList.add('visible');
              });
              linkObserver.disconnect();
            }
          });
        }, { 
          threshold: 0.5,
          rootMargin: '0px 0px -20px 0px'
        });
        linkObserver.observe(viewAllWrapper);
      }
    } else {
      // Desktop: Use section observer with staggered reveal
      const sectionObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            // Stagger card animations
            cards.forEach((card, index) => {
              setTimeout(() => {
                card.classList.add('visible');
              }, 150 + index * 150);
            });

            // View All link appears after cards
            setTimeout(() => {
              viewAllWrapper?.classList.add('visible');
            }, 150 + cards.length * 150 + 100);

            sectionObserver.disconnect();
          }
        });
      }, { 
        threshold: 0.15,
        rootMargin: '0px 0px -80px 0px'
      });

      sectionObserver.observe(section);
    }

    // Handle resize - update visibility for cards that are already in viewport
    let resizeTimeout;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(() => {
        // Re-check if cards need to be visible after resize
        cards.forEach(card => {
          if (!card.classList.contains('visible')) {
            const rect = card.getBoundingClientRect();
            if (rect.top < window.innerHeight * 0.85) {
              card.classList.add('visible');
            }
          }
        });

        // Check view all wrapper
        if (viewAllWrapper && !viewAllWrapper.classList.contains('visible')) {
          const rect = viewAllWrapper.getBoundingClientRect();
          if (rect.top < window.innerHeight * 0.9) {
            viewAllWrapper.classList.add('visible');
          }
        }
      }, 200);
    });
  };

  // Run on DOM ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initRelatedAnimation);
  } else {
    initRelatedAnimation();
  }
</script>
