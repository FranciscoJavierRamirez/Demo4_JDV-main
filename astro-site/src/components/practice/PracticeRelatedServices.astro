<style>
  .practice-related {
    position: relative;
    padding: var(--space-20) 0;
    background: linear-gradient(180deg, #ffffff 0%, #f8fafc 100%);
    overflow: hidden;
  }

  /* Subtle background pattern */
  .practice-related::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image:
      radial-gradient(circle at 20% 30%, rgba(59, 130, 246, 0.03) 0%, transparent 50%),
      radial-gradient(circle at 80% 70%, rgba(201, 169, 97, 0.03) 0%, transparent 50%);
    pointer-events: none;
  }

  /* ========================================
     CONTAINER
     ======================================== */
  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 var(--space-6);
    position: relative;
    z-index: 10;
  }

  /* ========================================
     HEADER
     ======================================== */
  .section-header {
    text-align: center;
    margin-bottom: var(--space-12);
  }

  .section-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1.25rem;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    color: var(--gray-700);
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    border-radius: 9999px;
    margin-bottom: 1.25rem;
    border: 1px solid var(--gray-200);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  }

  .section-badge i {
    color: var(--gold);
    font-size: 0.875rem;
  }

  .section-header h2 {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 800;
    letter-spacing: -0.02em;
    background: linear-gradient(135deg, #1e3a5f 0%, #2563eb 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .section-line {
    width: 5rem;
    height: 3px;
    background: linear-gradient(to right, var(--blue-primary), var(--gold), transparent);
    margin: 0 auto;
    border-radius: 9999px;
    opacity: 0.8;
  }

  /* ========================================
     GRID
     ======================================== */
  .related-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-6);
    margin-bottom: var(--space-10);
  }

  /* ========================================
     CARDS
     ======================================== */
  .related-card {
    position: relative;
    display: block;
    background: white;
    border: 1px solid var(--gray-200);
    border-radius: 20px;
    padding: var(--space-8);
    text-decoration: none;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
  }

  .related-card:hover {
    transform: translateY(-8px);
    border-color: var(--blue-primary);
    box-shadow:
      0 20px 40px rgba(59, 130, 246, 0.15),
      0 0 0 1px rgba(59, 130, 246, 0.1);
  }

  /* Hover Glow */
  .card-glow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--blue-primary), var(--gold), var(--blue-primary));
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .related-card:hover .card-glow {
    transform: scaleX(1);
  }

  /* Icon */
  .related-icon {
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
    border-radius: 16px;
    margin-bottom: var(--space-5);
    font-size: 2rem;
    transition: all 0.4s ease;
  }

  .related-card:hover .related-icon {
    transform: scale(1.1) rotate(5deg);
    background: linear-gradient(135deg, var(--gold-light) 0%, var(--gold) 100%);
  }

  /* Title */
  .related-card h3 {
    font-family: var(--font-sans);
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--gray-900);
    margin-bottom: var(--space-2);
    transition: color 0.3s ease;
  }

  .related-card:hover h3 {
    color: var(--blue-primary);
  }

  /* Description */
  .related-card p {
    font-size: 0.9375rem;
    color: var(--gray-600);
    line-height: 1.6;
    margin: 0 0 var(--space-4) 0;
  }

  /* Arrow */
  .related-arrow {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--blue-primary);
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.3s ease;
  }

  .related-card:hover .related-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  .related-arrow i {
    transition: transform 0.3s ease;
  }

  .related-card:hover .related-arrow i {
    transform: translateX(4px);
  }

  /* ========================================
     VIEW ALL LINK
     ======================================== */
  .view-all-wrapper {
    text-align: center;
  }

  .view-all-link {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: var(--space-4) var(--space-8);
    background: transparent;
    border: 2px solid var(--gray-300);
    border-radius: 50px;
    font-size: 1rem;
    font-weight: 600;
    color: var(--gray-700);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .view-all-link:hover {
    background: var(--blue-primary);
    border-color: var(--blue-primary);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(59, 130, 246, 0.3);
  }

  .view-all-link i {
    transition: transform 0.3s ease;
  }

  .view-all-link:hover i {
    transform: translateX(4px);
  }

  /* ========================================
     REVEAL ANIMATIONS
     ======================================== */
  .related-header-reveal {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.7s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .related-header-reveal.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .related-card-reveal {
    opacity: 0;
    transform: translateY(40px);
    transition: all 0.7s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .related-card-reveal.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .related-card-reveal[data-index="0"].visible { transition-delay: 0ms; }
  .related-card-reveal[data-index="1"].visible { transition-delay: 150ms; }
  .related-card-reveal[data-index="2"].visible { transition-delay: 300ms; }

  /* ========================================
     RESPONSIVE
     ======================================== */
  @media (max-width: 768px) {
    .practice-related {
      padding: var(--space-16) 0;
    }

    .related-grid {
      grid-template-columns: 1fr;
    }

    .related-card {
      padding: var(--space-6);
    }

    .related-arrow {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* ========================================
     REDUCED MOTION
     ======================================== */
  @media (prefers-reduced-motion: reduce) {
    .related-header-reveal,
    .related-card-reveal {
      opacity: 1;
      transform: none;
      transition: none;
    }

    .related-card:hover {
      transform: translateY(-4px);
    }
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const section = document.getElementById('related-services');
    if (!section) return;

    const header = section.querySelector('.related-header-reveal');
    const cards = section.querySelectorAll('.related-card-reveal');

    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    if (prefersReducedMotion) {
      header?.classList.add('visible');
      cards.forEach(card => card.classList.add('visible'));
      return;
    }

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          header?.classList.add('visible');
          cards.forEach((card, i) => {
            setTimeout(() => card.classList.add('visible'), 150 + i * 150);
          });
          observer.disconnect();
        }
      });
    }, { threshold: 0.15 });

    observer.observe(section);
  });
</script>
