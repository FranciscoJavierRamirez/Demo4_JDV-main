    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--blue-primary);
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.3s ease;
  }

