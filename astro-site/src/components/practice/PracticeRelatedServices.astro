  /* ========================================
     PERFORMANCE OPTIMIZATIONS
     ======================================== */
  .related-card-reveal,
  .related-header-reveal {
    will-change: opacity, transform, filter;
  }

  .related-card-reveal.visible,
  .related-header-reveal.visible {
    will-change: auto;
  }

  /* ========================================
     REDUCED MOTION - Accessibility
     ======================================== */
  @media (prefers-reduced-motion: reduce) {
    /* Header and cards - instant visibility */
    .related-header-reveal,
    .related-card-reveal {
      opacity: 1;
      transform: none;
      filter: none;
      transition: none;
    }

    .related-card-reveal.visible {
      transition: none;
    }

    /* Section line - always visible */
    .section-line {
      transform: scaleX(1);
      opacity: 0.8;
    }

    .related-header-reveal.visible .section-line {
      animation: none;
    }

    /* Icon - always visible, no animation */
    .related-card .related-icon {
      opacity: 1;
      transform: none;
    }

    .related-card.visible .related-icon {
      animation: none;
      opacity: 1;
      transform: none;
    }

    /* Title and description - always visible */
    .related-card h3,
    .related-card p {
      opacity: 1;
      transform: none;
    }

    .related-card.visible h3,
    .related-card.visible p {
      animation: none;
      opacity: 1;
      transform: none;
    }

    /* Arrow - always visible */
    .related-arrow {
      opacity: 1;
      transform: none;
    }

    .related-card.visible .related-arrow {
      animation: none;
      opacity: 1;
      transform: none;
    }

    /* Glow line - always visible */
    .card-glow {
      transform: scaleX(1);
    }

    .related-card.visible .card-glow {
      animation: none;
      transform: scaleX(1);
    }

    /* View All wrapper - always visible */
    .view-all-wrapper {
      opacity: 1;
      transform: none;
    }

    /* Hover effects - minimal movement */
    .related-card:hover {
      transform: translateY(-4px);
      transition: background 0.2s ease, border-color 0.2s ease, box-shadow 0.2s ease;
    }

    /* Touch feedback - minimal */
    .related-card:active {
      transform: none;
