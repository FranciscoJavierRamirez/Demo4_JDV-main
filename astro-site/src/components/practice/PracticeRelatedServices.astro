<style>
  .practice-related {
    position: relative;
    padding: var(--space-20) 0;
    background: linear-gradient(180deg, #ffffff 0%, #f8fafc 100%);
    overflow: hidden;
  }

  /* Subtle background pattern */
  .practice-related::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image:
      radial-gradient(circle at 20% 30%, rgba(59, 130, 246, 0.03) 0%, transparent 50%),
      radial-gradient(circle at 80% 70%, rgba(201, 169, 97, 0.03) 0%, transparent 50%);
    pointer-events: none;
  }

  /* ========================================
     CONTAINER
     ======================================== */
  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 var(--space-6);
    position: relative;
    z-index: 10;
  }

  /* ========================================
     HEADER
     ======================================== */
  .section-header {
    text-align: center;
    margin-bottom: var(--space-12);
  }

  .section-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1.25rem;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    color: var(--gray-700);
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    border-radius: 9999px;
    margin-bottom: 1.25rem;
    border: 1px solid var(--gray-200);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  }

  .section-badge i {
    color: var(--gold);
    font-size: 0.875rem;
  }

  .section-header h2 {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 800;
    letter-spacing: -0.02em;
    background: linear-gradient(135deg, #1e3a5f 0%, #2563eb 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .section-line {
    width: 5rem;
    height: 3px;
    background: linear-gradient(to right, var(--blue-primary), var(--gold), transparent);
    margin: 0 auto;
    border-radius: 9999px;
    opacity: 0.8;
  }

  /* ========================================
     GRID
     ======================================== */
  .related-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-6);
    margin-bottom: var(--space-10);
  }

  /* ========================================
     CARDS
     ======================================== */
  .related-card {
    position: relative;
    display: block;
    background: white;
    border: 1px solid var(--gray-200);
    border-radius: 20px;
    padding: var(--space-8);
    text-decoration: none;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
  }

  .related-card:hover {
    transform: translateY(-8px);
    border-color: var(--blue-primary);
    box-shadow:
      0 20px 40px rgba(59, 130, 246, 0.15),
      0 0 0 1px rgba(59, 130, 246, 0.1);
  }

  /* Hover Glow */
  .card-glow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--blue-primary), var(--gold), var(--blue-primary));
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .related-card:hover .card-glow {
    transform: scaleX(1);
  }

  /* Icon */
  .related-icon {
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
    border-radius: 16px;
    margin-bottom: var(--space-5);
    font-size: 2rem;
    transition: all 0.4s ease;
  }

