<script is:inline>
  // ========================================
  // Target Section - Premium Scroll Animations
  // Individual observers for mobile, staggered for desktop
  // ========================================
  const initTargetAnimation = () => {
    const section = document.getElementById('practice-target');
    if (!section) return;

    const header = section.querySelector('.target-header-reveal');
    const cards = section.querySelectorAll('.target-card-reveal');

    // Check for reduced motion preference
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    if (prefersReducedMotion) {
      // Show everything immediately without animation
      header?.classList.add('visible');
      cards.forEach(card => card.classList.add('visible'));
      return;
    }

    // Detect mobile device
    const isMobile = window.innerWidth <= 768;

    // Header observer - triggers first
    const headerObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          header?.classList.add('visible');
          headerObserver.disconnect();
        }
      });
    }, { 
      threshold: 0.3,
      rootMargin: '0px 0px -50px 0px'
    });

    if (header) {
      headerObserver.observe(header);
    }

    // Mobile: Individual observers for each card
    // Each card animates when it enters the viewport
    if (isMobile) {
      cards.forEach((card) => {
        const cardObserver = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              // Use requestAnimationFrame for smoother animation start
              requestAnimationFrame(() => {
                card.classList.add('visible');
              });
              cardObserver.disconnect();
            }
          });
        }, { 
          threshold: 0.2,
          rootMargin: '0px 0px -10% 0px'
        });
        
        cardObserver.observe(card);
      });
    } else {
      // Desktop: Section observer with staggered reveal via JavaScript
      const sectionObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            // Stagger card animations with controlled timing
            cards.forEach((card, index) => {
              setTimeout(() => {
                requestAnimationFrame(() => {
                  card.classList.add('visible');
                });
              }, 100 + index * 120);
            });
            sectionObserver.disconnect();
          }
        });
      }, { 
        threshold: 0.15,
        rootMargin: '0px 0px -80px 0px'
      });

      sectionObserver.observe(section);
    }

    // Handle resize - ensure visibility after orientation change
    let resizeTimeout;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(() => {
        // Re-check if cards need to be visible after resize
        cards.forEach(card => {
          if (!card.classList.contains('visible')) {
            const rect = card.getBoundingClientRect();
            if (rect.top < window.innerHeight * 0.85) {
              card.classList.add('visible');
            }
          }
        });
      }, 200);
    });

    // Spotlight effect for desktop (mouse tracking)
    if (window.matchMedia('(hover: hover)').matches) {
      cards.forEach(card => {
        card.addEventListener('mousemove', (e) => {
          const rect = card.getBoundingClientRect();
          card.style.setProperty('--mouse-x', `${e.clientX - rect.left}px`);
          card.style.setProperty('--mouse-y', `${e.clientY - rect.top}px`);
        });
      });
    }
  };

  // Run on DOM ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initTargetAnimation);
  } else {
    initTargetAnimation();
  }
</script>
