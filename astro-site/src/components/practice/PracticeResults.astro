---
interface ResultItem {
  icon: string;
  title: string;
  description: string;
}

interface Props {
  items: ResultItem[];
}

const { items } = Astro.props;
---

<section class="practice-results" id="practice-results">
  <!-- Background -->
  <div class="results-bg">
    <div class="results-gradient"></div>
  </div>

  <div class="container">
    <div class="section-header results-header-reveal">
      <span class="section-badge">
        <i class="fas fa-trophy"></i>
        <span>Resultados</span>
      </span>
      <h2>Resultados que obtendr√°s</h2>
      <div class="section-line"></div>
    </div>

    <div class="results-grid">
      {items.map((item, index) => (
        <div 
          class="result-card result-card-reveal" 
          data-index={index}
        >
          <!-- Spotlight -->
          <div class="card-spotlight"></div>
          
          <!-- Top Gradient Line -->
          <div class="card-top-line"></div>

          <!-- Content -->
          <div class="card-content">
            <div class="result-icon-wrapper">
              <div class="result-icon-bg"></div>
              <span class="result-icon">{item.icon}</span>
            </div>
            <h3>{item.title}</h3>
            <p>{item.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .practice-results {
    position: relative;
    padding: var(--space-20) 0;
    /* Premium blue-to-white gradient (consistent with home) */
    background: linear-gradient(180deg, #dbeafe 0%, #eff6ff 40%, #ffffff 100%);
    overflow: hidden;
  }

  /* ========================================
     BACKGROUND - Premium Mesh
     ======================================== */
  .results-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }

  .results-gradient {
    position: absolute;
    inset: 0;
    /* Premium blue mesh gradient */
    background:
      radial-gradient(ellipse 80% 50% at 80% 20%, rgba(59, 130, 246, 0.08) 0%, transparent 50%),
      radial-gradient(ellipse 60% 40% at 20% 80%, rgba(30, 64, 175, 0.06) 0%, transparent 50%);
  }

  /* Mesh orbs - unified blue theme */
  .results-bg::before {
    content: '';
    position: absolute;
    top: 10%;
    right: 20%;
    width: 450px;
    height: 450px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.12) 0%, transparent 70%);
    filter: blur(100px);
    animation: resultsOrbFloat 22s ease-in-out infinite;
  }

  .results-bg::after {
    content: '';
    position: absolute;
    bottom: 15%;
    left: 10%;
    width: 350px;
    height: 350px;
    border-radius: 50%;
    /* Subtle gold accent for warmth */
    background: radial-gradient(circle, rgba(201, 169, 97, 0.06) 0%, transparent 70%);
    filter: blur(80px);
    animation: resultsOrbFloat 25s ease-in-out infinite reverse;
  }

  @keyframes resultsOrbFloat {
    0%, 100% { transform: translate(0, 0) scale(1); }
    25% { transform: translate(-30px, 40px) scale(1.05); }
    50% { transform: translate(20px, -30px) scale(0.95); }
    75% { transform: translate(-40px, -20px) scale(1.02); }
  }

  /* ========================================
     CONTAINER
     ======================================== */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-6);
    position: relative;
    z-index: 10;
  }

  /* ========================================
     SECTION HEADER - Premium Style
     ======================================== */
  .section-header {
    text-align: center;
    margin-bottom: var(--space-14);
  }

  .section-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1.25rem;
    /* Premium navy with gold accent - like home Stats badge */
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    color: var(--gray-700, #374151);
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    border-radius: 9999px;
    margin-bottom: 1.25rem;
    border: 1px solid var(--gray-200, #e5e7eb);
    box-shadow:
      0 2px 8px rgba(0, 0, 0, 0.06),
      0 1px 3px rgba(0, 0, 0, 0.04);
  }

  .section-badge i {
    color: var(--gold, #C9A961);
    font-size: 0.875rem;
  }

  .section-header h2 {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 800;
    letter-spacing: -0.02em;
    /* Premium blue gradient for high contrast on light backgrounds */
    background: linear-gradient(135deg, #1e3a5f 0%, #2563eb 50%, #3b82f6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    filter: drop-shadow(0 2px 4px rgba(30, 58, 95, 0.15));
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .section-line {
    width: 6rem;
    height: 3px;
    /* Blue-to-gold gradient line - premium transition */
    background: linear-gradient(to right, var(--blue-primary, #3B82F6), var(--gold, #C9A961), transparent);
    margin: 0 auto 1.5rem;
    border-radius: 9999px;
    opacity: 0.85;
    transform: scaleX(0);
    transform-origin: left center;
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.3s;
  }

  .results-header-reveal.visible .section-line {
    transform: scaleX(1);
  }

  .section-header p {
    font-size: 1.125rem;
    color: var(--gray-600);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.7;
  }

  /* ========================================
     GRID
     ======================================== */
  .results-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: var(--space-6);
  }

  /* ========================================
     CARDS - Premium Glass Design
     ======================================== */
  .result-card {
    position: relative;
    /* Light glass base state */
    background: rgba(255, 255, 255, 0.90);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    padding: var(--space-8);
    border-radius: 20px;
    text-align: center;
    border: 1px solid rgba(255, 255, 255, 0.6);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.05),
      0 2px 4px -1px rgba(0, 0, 0, 0.03),
      inset 0 1px 0 rgba(255, 255, 255, 0.6);
  }

  /* Hover: Transition to dark navy glass */
  .result-card:hover {
    transform: translateY(-8px) scale(1.01);
    /* Dark glass hover state */
    background: rgba(12, 35, 64, 0.90);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border-color: rgba(255, 255, 255, 0.2);
    /* Premium blue glow shadow - consistent with design system */
    box-shadow:
      0 25px 50px -12px rgba(59, 130, 246, 0.30),
      0 0 0 1px rgba(59, 130, 246, 0.15),
      0 0 50px rgba(59, 130, 246, 0.12);
  }

  /* Spotlight - subtle blue glow following cursor */
  .card-spotlight {
    position: absolute;
    inset: 0;
    background: radial-gradient(
      400px circle at var(--mouse-x, 50%) var(--mouse-y, 50%),
      rgba(59, 130, 246, 0.12),
      transparent 40%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  .result-card:hover .card-spotlight {
    opacity: 1;
  }

  /* Top Line */
  .card-top-line {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--gold) 0%, var(--gold-light) 50%, var(--gold) 100%);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .result-card:hover .card-top-line {
    transform: scaleX(1);
  }

  /* Content */
  .card-content {
    position: relative;
    z-index: 5;
  }

  /* Icon with Reveal Animation */
  .result-icon-wrapper {
    position: relative;
    width: 80px;
    height: 80px;
    margin: 0 auto var(--space-5);
    opacity: 0;
    transform: scale(0.8) rotate(-10deg);
  }

  /* Icon reveal animation on scroll */
  .result-card.visible .result-icon-wrapper {
    animation: resultIconReveal 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  @keyframes resultIconReveal {
    0% {
      opacity: 0;
      transform: scale(0.8) rotate(-10deg);
    }
    60% {
      opacity: 1;
      transform: scale(1.1) rotate(5deg);
    }
    100% {
      opacity: 1;
      transform: scale(1) rotate(0deg);
    }
  }

  /* Icon pulse glow - blue for consistency */
  .result-icon-wrapper::before {
    content: '';
    position: absolute;
    inset: -10px;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.25) 0%, transparent 70%);
    border-radius: 50%;
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: 0;
  }

  .result-card:hover .result-icon-wrapper::before {
    opacity: 1;
    animation: resultIconPulse 2s ease-in-out infinite;
  }

  @keyframes resultIconPulse {
    0%, 100% { transform: scale(1); opacity: 0.6; }
    50% { transform: scale(1.15); opacity: 1; }
  }

  .result-icon-bg {
    position: absolute;
    inset: 0;
    /* Light blue gradient base - premium feel */
    background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
    border-radius: 20px;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.12);
    z-index: 1;
  }

  .result-card:hover .result-icon-bg {
    transform: scale(1.1) rotate(5deg);
    /* Gold accent on hover - premium touch */
    background: linear-gradient(135deg, var(--gold, #C9A961) 0%, var(--gold-dark, #B89350) 100%);
    box-shadow: 0 8px 24px rgba(201, 169, 97, 0.35);
  }

  .result-icon {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    font-size: 2.5rem;
    transition: transform 0.4s ease;
  }

  .result-card:hover .result-icon {
    transform: scale(1.15);
  }

  /* Title */
  .result-card h3 {
    font-family: var(--font-sans);
    font-size: 1.25rem;
    color: var(--gray-900);
    margin-bottom: var(--space-3);
    font-weight: 600;
    transition: color 0.4s ease;
  }

  /* Hover: White title on dark glass */
  .result-card:hover h3 {
    color: #ffffff;
  }

  /* Description */
  .result-card p {
    font-size: 0.9375rem;
    color: var(--gray-600);
    line-height: 1.7;
    margin: 0;
    transition: color 0.4s ease;
  }

  /* Hover: Light text on dark glass */
  .result-card:hover p {
    color: rgba(255, 255, 255, 0.9);
  }

  /* ========================================
     SCROLL REVEAL
     ======================================== */
  .results-header-reveal {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.7s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .results-header-reveal.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .result-card-reveal {
    opacity: 0;
    transform: translateY(40px) scale(0.97);
    transition: all 0.7s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .result-card-reveal.visible {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  /* Stagger delays */
  .result-card-reveal[data-index="0"].visible { transition-delay: 0ms; }
  .result-card-reveal[data-index="1"].visible { transition-delay: 100ms; }
  .result-card-reveal[data-index="2"].visible { transition-delay: 200ms; }
  .result-card-reveal[data-index="3"].visible { transition-delay: 300ms; }

  /* ========================================
     RESPONSIVE
     ======================================== */
  @media (max-width: 768px) {
    .practice-results {
      padding: var(--space-16) 0;
    }

    .results-grid {
      grid-template-columns: 1fr;
    }
  }

  /* ========================================
     REDUCED MOTION
     ======================================== */
  @media (prefers-reduced-motion: reduce) {
    .results-header-reveal,
    .result-card-reveal {
      opacity: 1;
      transform: none;
      transition: none;
    }

    .section-line {
      transform: scaleX(1);
      transition: none;
    }

    .result-icon-wrapper {
      opacity: 1;
      transform: none;
    }

    .result-card.visible .result-icon-wrapper {
      animation: none;
    }

    .result-card:hover .result-icon-wrapper::before {
      animation: none;
    }

    .results-bg::before,
    .results-bg::after {
      animation: none;
    }

    .result-card:hover {
      transform: translateY(-4px);
    }
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const section = document.getElementById('practice-results');
    if (!section) return;

    const header = section.querySelector('.results-header-reveal');
    const cards = section.querySelectorAll('.result-card-reveal');

    // Check for reduced motion
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    if (prefersReducedMotion) {
      header?.classList.add('visible');
      cards.forEach(card => card.classList.add('visible'));
      return;
    }

    // Scroll reveal
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          header?.classList.add('visible');
          cards.forEach((card, i) => {
            setTimeout(() => card.classList.add('visible'), 150 + i * 100);
          });
          observer.disconnect();
        }
      });
    }, { threshold: 0.15 });

    observer.observe(section);

    // Spotlight effect
    cards.forEach(card => {
      card.addEventListener('mousemove', (e) => {
        const rect = card.getBoundingClientRect();
        card.style.setProperty('--mouse-x', `${e.clientX - rect.left}px`);
        card.style.setProperty('--mouse-y', `${e.clientY - rect.top}px`);
      });
    });
  });
</script>
