---
interface Props {
  headline: string;
  text: string;
  button: string;
}

const { headline, text, button } = Astro.props;
---

<section class="final-cta">
  <!-- Animated Background Orbs -->
  <div class="cta-bg-elements">
    <div class="cta-orb cta-orb-1"></div>
    <div class="cta-orb cta-orb-2"></div>
    <div class="cta-orb cta-orb-3"></div>
  </div>

  <!-- Grid Pattern -->
  <div class="cta-grid-pattern"></div>

  <div class="container">
    <div class="cta-content">
      <!-- Icon with Glassmorphism Container -->
      <div class="cta-icon-wrapper">
        <div class="cta-icon-glow"></div>
        <div class="cta-icon">
          <i class="fas fa-shield-alt"></i>
        </div>
      </div>

      <!-- Headline with Gradient Text -->
      <h2>{headline}</h2>

      <!-- Description -->
      <p class="cta-description">{text}</p>

      <!-- Action Buttons -->
      <div class="cta-actions">
        <a href="https://wa.me/56965870256?text=Necesito%20m%C3%A1s%20informaci%C3%B3n%20porque%20estoy%20interesado%20en%20recibir%20asesor%C3%ADa%20legal" class="btn btn-primary" target="_blank" rel="noopener noreferrer">
          <span class="btn-shimmer"></span>
          <i class="fab fa-whatsapp"></i>
          <span>{button}</span>
        </a>
        <a href="https://wa.me/56965870256?text=Necesito%20m%C3%A1s%20informaci%C3%B3n%20porque%20estoy%20interesado%20en%20recibir%20asesor%C3%ADa%20legal" class="btn btn-whatsapp" target="_blank" rel="noopener noreferrer">
          <i class="fab fa-whatsapp"></i>
          <span>WhatsApp Directo</span>
        </a>
      </div>

      <!-- Features Pills -->
      <div class="cta-features">
        <div class="cta-feature">
          <i class="fas fa-clock"></i>
          <span>Respuesta en menos de 24h</span>
        </div>
        <div class="cta-feature">
          <i class="fas fa-video"></i>
          <span>Videollamada de Orientaci√≥n</span>
        </div>
        <div class="cta-feature">
          <i class="fas fa-lock"></i>
          <span>100% Confidencial</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .final-cta {
    position: relative;
    padding: var(--space-24) 0;
    background: linear-gradient(135deg, #0c2340 0%, #1a4d7a 50%, #0c2340 100%);
    color: white;
    overflow: hidden;
  }

  /* ========================================
     BACKGROUND ELEMENTS
     ======================================== */
  .cta-bg-elements {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 1;
  }

  .cta-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    mix-blend-mode: screen;
  }

  .cta-orb-1 {
    top: -100px;
    right: -80px;
    width: 350px;
    height: 350px;
    background: radial-gradient(circle, rgba(201, 169, 97, 0.28) 0%, transparent 70%);
    animation: ctaOrbFloat 20s ease-in-out infinite;
  }

  .cta-orb-2 {
    bottom: -80px;
    left: -40px;
    width: 280px;
    height: 280px;
    background: radial-gradient(circle, rgba(201, 169, 97, 0.22) 0%, transparent 70%);
    animation: ctaOrbFloat 25s ease-in-out infinite reverse;
  }

  .cta-orb-3 {
    top: 50%;
    left: 25%;
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.18) 0%, transparent 70%);
    animation: ctaOrbFloat 18s ease-in-out infinite 5s;
  }

  @keyframes ctaOrbFloat {
    0%, 100% {
      transform: translate(0, 0) scale(1);
      opacity: 0.6;
    }
    25% {
      transform: translate(60px, -80px) scale(1.1);
      opacity: 0.9;
    }
    50% {
      transform: translate(-40px, -40px) scale(0.95);
      opacity: 0.7;
    }
    75% {
      transform: translate(-60px, 60px) scale(1.05);
      opacity: 0.8;
    }
  }

  .cta-grid-pattern {
    position: absolute;
    inset: 0;
    z-index: 2;
    background-image: 
      linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
    background-size: 50px 50px;
    pointer-events: none;
  }

  /* ========================================
     CONTAINER
     ======================================== */
  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 var(--space-6);
    position: relative;
    z-index: 10;
  }

  .cta-content {
    text-align: center;
  }

  /* ========================================
     ICON
     ======================================== */
  .cta-icon-wrapper {
    position: relative;
    display: inline-block;
    margin-bottom: var(--space-8);
  }

  .cta-icon-glow {
    position: absolute;
    inset: -20px;
    background: radial-gradient(circle, rgba(201, 169, 97, 0.3) 0%, transparent 70%);
    border-radius: 50%;
    animation: practicePulseGlow 3s ease-in-out infinite;
  }

  .cta-icon {
    position: relative;
    width: 100px;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(201, 169, 97, 0.2) 0%, rgba(212, 175, 55, 0.15) 100%);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 2px solid rgba(201, 169, 97, 0.3);
    border-radius: 24px;
    font-size: 3rem;
    color: var(--gold);
    box-shadow: 
      0 8px 32px rgba(201, 169, 97, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }

  /* ========================================
     HEADLINE
     ======================================== */
  .final-cta h2 {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: var(--space-6);
    font-weight: 800;
    line-height: 1.2;
    letter-spacing: -0.02em;
    background: linear-gradient(135deg, #ffffff 0%, var(--gold-light) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* ========================================
     DESCRIPTION
     ======================================== */
  .cta-description {
    font-size: 1.25rem;
    line-height: 1.7;
    margin-bottom: var(--space-10);
    opacity: 0.95;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  /* ========================================
     BUTTONS
     ======================================== */
  .cta-actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4);
    justify-content: center;
    margin-bottom: var(--space-10);
  }

  .btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-5) var(--space-10);
    font-size: 1.125rem;
    font-weight: 600;
    border-radius: 14px;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    cursor: pointer;
    border: none;
    font-family: var(--font-sans);
    overflow: hidden;
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--gold) 0%, var(--gold-dark) 100%);
    color: #ffffff;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    box-shadow: 
      0 4px 20px rgba(201, 169, 97, 0.4),
      0 0 40px rgba(201, 169, 97, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
  }

  .btn-primary i {
    filter: drop-shadow(0 1px 1px rgba(0, 0, 0, 0.2));
  }

  .btn-shimmer {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
    animation: practiceShimmer 3s ease-in-out infinite;
  }

  .btn-primary:hover {
    transform: translateY(-3px) scale(1.02);
    background: linear-gradient(135deg, var(--gold-light) 0%, var(--gold) 100%);
    box-shadow: 
      0 8px 35px rgba(201, 169, 97, 0.5),
      0 0 60px rgba(201, 169, 97, 0.25),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
  }

  .btn-whatsapp {
    background: linear-gradient(135deg, #25D366 0%, #128C7E 100%);
    color: white;
    box-shadow: 
      0 4px 20px rgba(37, 211, 102, 0.35),
      inset 0 1px 0 rgba(255, 255, 255, 0.15);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .btn-whatsapp i {
    font-size: 1.25rem;
    transition: transform 0.3s ease;
  }

  .btn-whatsapp:hover {
    background: linear-gradient(135deg, #2ee373 0%, #25D366 100%);
    transform: translateY(-3px) scale(1.02);
    box-shadow: 
      0 8px 30px rgba(37, 211, 102, 0.5),
      0 0 40px rgba(37, 211, 102, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
  }

  .btn-whatsapp:hover i {
    transform: scale(1.15) rotate(-5deg);
  }

  .btn-whatsapp:active {
    transform: translateY(-1px) scale(0.98);
  }

  /* ========================================
     FEATURES PILLS
     ======================================== */
  .cta-features {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4);
    justify-content: center;
  }

  .cta-feature {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-5);
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .cta-feature:hover {
    background: rgba(255, 255, 255, 0.12);
    transform: translateY(-2px);
    border-color: rgba(201, 169, 97, 0.3);
  }

  .cta-feature i {
    color: var(--gold);
    font-size: 1rem;
  }

  /* ========================================
     RESPONSIVE
     ======================================== */
  @media (max-width: 768px) {
    .final-cta {
      padding: var(--space-16) 0;
    }

    .cta-icon {
      width: 80px;
      height: 80px;
      font-size: 2.5rem;
    }

    .cta-actions {
      flex-direction: column;
      width: 100%;
    }

    .btn {
      width: 100%;
      justify-content: center;
    }

    .cta-description {
      font-size: 1.125rem;
    }

    .cta-features {
      flex-direction: column;
      align-items: center;
    }

    .cta-feature {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }
  }

  /* ========================================
     REDUCED MOTION
     ======================================== */
  @media (prefers-reduced-motion: reduce) {
    .cta-orb-1,
    .cta-orb-2,
    .cta-orb-3 {
      animation: none;
    }

    .cta-icon-glow {
      animation: none;
    }

    .btn-shimmer {
      animation: none;
    }
  }
</style>
