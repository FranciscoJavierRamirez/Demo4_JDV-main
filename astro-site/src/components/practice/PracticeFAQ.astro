---
interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  items: FAQItem[];
  areaName: string;
}

const { items, areaName } = Astro.props;
---

<section class="practice-faq" id="practice-faq">
  <!-- Decorative Background Elements -->
  <div class="faq-bg-elements">
    <div class="faq-orb faq-orb-1"></div>
    <div class="faq-orb faq-orb-2"></div>
    <div class="faq-grid-pattern"></div>
  </div>

  <div class="container">
    <!-- Section Header -->
    <div class="section-header faq-header-reveal">
      <h2>Preguntas Frecuentes</h2>
      <div class="section-divider"></div>
      <p>Resolvemos las dudas m√°s comunes sobre {areaName}</p>
    </div>

    <!-- FAQ List -->
    <div class="faq-list">
      {items.map((item, index) => (
        <div 
          class="faq-item faq-item-reveal" 
          data-faq-id={index + 100}
          data-delay={index * 80}
        >
          <!-- Glassmorphism Background -->
          <div class="faq-item-bg"></div>

          <!-- Gradient Border Animation Layer -->
          <div class="faq-gradient-border"></div>

          <!-- Hover Glow -->
          <div class="faq-hover-glow"></div>

          <!-- Content -->
          <div class="faq-item-content">
            <button
              class="faq-question"
              onclick={`togglePracticeFaq(${index + 100})`}
              aria-expanded="false"
              aria-controls={`faq-answer-${index + 100}`}
            >
              <span class="faq-question-text">{item.question}</span>
              <div class="faq-chevron-wrapper">
                <i class="fas fa-chevron-down faq-chevron"></i>
              </div>
            </button>
            <div class="faq-answer" id={`faq-answer-${index + 100}`}>
              <div class="faq-answer-inner">
                <div class="faq-answer-content">
                  <div class="faq-answer-line"></div>
                  <p>{item.answer}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Schema.org structured data for FAQ -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": items.map((item) => ({
      "@type": "Question",
      "name": item.question,
      "acceptedAnswer": {
        "@type": "Answer",
        "text": item.answer
      }
    }))
  })} />
</section>

<style>
  .practice-faq {
    position: relative;
    padding: 6rem 0; /* py-24 = 96px como en home */
    background: linear-gradient(135deg, #1E40AF 0%, #2563EB 50%, #1E40AF 100%);
    overflow: hidden;
  }

  /* ========================================
     BACKGROUND ELEMENTS
     ======================================== */
  .faq-bg-elements {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 1;
  }

  .faq-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    mix-blend-mode: screen;
  }

  .faq-orb-1 {
    top: -10%;
    left: 20%;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.2) 0%, transparent 70%);
    animation: faqOrbFloat 20s ease-in-out infinite;
  }

  .faq-orb-2 {
    bottom: -10%;
    right: 20%;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(201, 169, 97, 0.15) 0%, transparent 70%);
    animation: faqOrbFloat 25s ease-in-out infinite reverse;
  }

  @keyframes faqOrbFloat {
    0%, 100% {
      transform: translate(0, 0) scale(1);
      opacity: 0.5;
    }
    25% {
      transform: translate(60px, -80px) scale(1.1);
      opacity: 0.8;
    }
    50% {
      transform: translate(-40px, -40px) scale(0.95);
      opacity: 0.6;
    }
    75% {
      transform: translate(-60px, 60px) scale(1.05);
      opacity: 0.7;
    }
  }

  .faq-grid-pattern {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(rgba(255, 255, 255, 0.04) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.04) 1px, transparent 1px);
    background-size: 40px 40px;
  }

  /* ========================================
     CONTAINER
     ======================================== */
  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 var(--space-6);
    position: relative;
    z-index: 10;
  }

  /* ========================================
     SECTION HEADER
     ======================================== */
  .section-header {
    text-align: center;
    margin-bottom: 4rem; /* mb-16 = 64px como en home */
    color: white;
  }

  .section-header h2 {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: 1.5rem; /* mb-6 = 24px como en home */
    font-weight: 700;
    letter-spacing: -0.02em;
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  .section-divider {
    width: 6rem; /* w-24 = 96px como en home */
    height: 0.25rem; /* h-1 = 4px */
    background: linear-gradient(to right, #C9A961, transparent);
    border-radius: 9999px;
    margin: 0 auto 1.5rem; /* mb-6 = 24px como en home */
    opacity: 0.8;
    transform: scaleX(0);
    transform-origin: left center;
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.3s;
  }

  .faq-header-reveal.visible .section-divider {
    transform: scaleX(1);
  }

  .section-header p {
    font-size: 1rem;
    line-height: 1.625;
    color: rgba(255, 255, 255, 0.8);
    max-width: 700px; /* max-w-[700px] como en home */
    margin: 0 auto;
  }

  @media (min-width: 1024px) {
    .section-header p {
      font-size: 1.125rem; /* lg:text-lg */
    }
  }

  /* ========================================
     FAQ LIST
     ======================================== */
  .faq-list {
    display: flex;
    flex-direction: column;
    gap: 1rem; /* space-y-4 = 16px como en home */
  }

  /* ========================================
     FAQ ITEM
     ======================================== */
  .faq-item {
    position: relative;
    border-radius: 24px;
    overflow: hidden;
    transition: opacity 0.6s cubic-bezier(0.16, 1, 0.3, 1),
                transform 0.6s cubic-bezier(0.16, 1, 0.3, 1),
                box-shadow 0.5s ease;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.3),
      0 2px 4px -1px rgba(0, 0, 0, 0.2);
  }

  .faq-item:hover {
    transform: translateY(-8px) scale(1.01);
    box-shadow:
      0 20px 40px -12px rgba(0, 0, 0, 0.5),
      0 0 0 1px rgba(201, 169, 97, 0.3);
  }

  /* Glassmorphism Background */
  .faq-item-bg {
    position: absolute;
    inset: 0;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 24px;
    transition: all 0.5s ease;
  }

  .faq-item:hover .faq-item-bg {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.15);
  }

  /* Gradient Border Animation */
  .faq-gradient-border {
    position: absolute;
    inset: 0;
    border-radius: 24px;
    background: conic-gradient(
      from 0deg at 50% 50%,
      #C9A961 0deg,
      #3B82F6 90deg,
      #D4C5A0 180deg,
      #60A5FA 270deg,
      #C9A961 360deg
    );
    background-size: 200% 200%;
    animation: rotateFaqBorder 8s linear infinite;
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask-composite: exclude;
    -webkit-mask-composite: xor;
    padding: 2px;
    opacity: 0;
    transition: opacity 0.5s ease;
    pointer-events: none;
  }

  @keyframes rotateFaqBorder {
    0% {
      background-position: 0% 0%;
      filter: hue-rotate(0deg);
    }
    100% {
      background-position: 200% 200%;
      filter: hue-rotate(360deg);
    }
  }

  .faq-item:hover .faq-gradient-border {
    opacity: 1;
  }

  /* Hover Glow */
  .faq-hover-glow {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, transparent 0%, transparent 50%, rgba(201, 169, 97, 0.05) 100%);
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  .faq-item:hover .faq-hover-glow {
    opacity: 1;
  }

  /* ========================================
     FAQ QUESTION BUTTON
     ======================================== */
  .faq-item-content {
    position: relative;
    z-index: 10;
  }

  .faq-question {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1.5rem; /* gap-6 = 24px como en home */
    padding: 1.5rem; /* p-6 = 24px base */
    background: transparent;
    border: none;
    text-align: left;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .faq-question-text {
    flex: 1;
    font-family: var(--font-display);
    font-size: 1rem; /* text-base = 16px base */
    color: white;
    line-height: 1.5;
    transition: color 0.3s ease;
  }

  .faq-item:hover .faq-question-text {
    color: #D4C5A0; /* gold-light como en home */
  }

  /* Chevron Wrapper */
  .faq-chevron-wrapper {
    width: 3rem; /* w-12 = 48px como en home */
    height: 3rem; /* h-12 = 48px como en home */
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem; /* rounded-2xl = 16px como en home */
    flex-shrink: 0;
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .faq-item:hover .faq-chevron-wrapper {
    transform: scale(1.1);
    border-color: rgba(201, 169, 97, 0.3);
  }

  .faq-chevron {
    color: #C9A961;
    font-size: 1rem; /* text-base como en home */
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  /* Responsive: larger screens */
  @media (min-width: 1024px) {
    .faq-question {
      padding: 2rem; /* lg:p-8 = 32px */
    }

    .faq-question-text {
      font-size: 1.25rem; /* lg:text-xl = 20px */
    }
  }

  /* Active State */
  .faq-item.active .faq-chevron {
    transform: rotate(180deg) scale(1.2);
    color: white;
  }

  .faq-item.active .faq-chevron-wrapper {
    background: linear-gradient(135deg, #C9A254 0%, #D4C5A0 50%, #B89350 100%);
    border-color: transparent;
    box-shadow: 0 8px 20px rgba(201, 169, 97, 0.4);
  }

  .faq-item.active {
    transform: scale(1.02);
    box-shadow:
      0 25px 50px -12px rgba(59, 130, 246, 0.4),
      0 0 0 2px rgba(201, 169, 97, 0.5),
      0 0 60px rgba(201, 169, 97, 0.3);
  }

  .faq-item.active .faq-item-bg {
    background: rgba(255, 255, 255, 0.12);
    border-color: rgba(201, 169, 97, 0.3);
  }

  .faq-item.active .faq-question-text {
    color: var(--gold);
  }

  .faq-item.active .faq-gradient-border {
    opacity: 1;
    animation: rotateFaqBorder 4s linear infinite, faqActivePulse 2s ease-in-out infinite;
  }

  @keyframes faqActivePulse {
    0%, 100% {
      opacity: 0.7;
    }
    50% {
      opacity: 1;
    }
  }

  /* ========================================
     FAQ ANSWER
     ======================================== */
  .faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .faq-answer-inner {
    padding: 0.5rem 1.5rem 2rem; /* pt-2 px-6 pb-8 como en home */
    opacity: 0;
    transform: translateY(8px);
    transition: all 0.4s ease;
  }

  .faq-answer-content {
    display: flex;
    gap: 1rem; /* gap-4 = 16px como en home */
  }

  .faq-item.active .faq-answer-inner {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 200ms;
  }

  .faq-answer-line {
    flex-shrink: 0;
    width: 0.25rem; /* w-1 = 4px como en home */
    background: linear-gradient(to bottom, #C9A961, transparent);
    border-radius: 9999px;
  }

  .faq-answer p {
    flex: 1;
    font-size: 0.875rem; /* text-sm = 14px base */
    line-height: 1.625;
    color: rgba(255, 255, 255, 0.7);
    margin: 0;
  }

  /* Responsive: larger screens */
  @media (min-width: 1024px) {
    .faq-answer-inner {
      padding: 0.5rem 2rem 2rem; /* pt-2 lg:px-8 pb-8 */
    }

    .faq-answer p {
      font-size: 1rem; /* lg:text-base = 16px */
    }
  }

  /* ========================================
     SCROLL REVEAL ANIMATIONS
     ======================================== */
  .faq-header-reveal {
    opacity: 0;
    transform: translateY(40px);
    transition: opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1),
                transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .faq-header-reveal.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .faq-item-reveal {
    opacity: 0;
    transform: translateY(30px) scale(0.98);
  }

  .faq-item-reveal.visible {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  /* ========================================
     RESPONSIVE - Mobile adjustments
     ======================================== */
  @media (max-width: 767px) {
    .practice-faq {
      padding: 4rem 0; /* Reducido para mobile */
    }

    .section-header {
      margin-bottom: 3rem;
    }
  }

  /* ========================================
     PERFORMANCE OPTIMIZATIONS
     ======================================== */
  .faq-item {
    will-change: transform, opacity;
  }

  .faq-answer {
    will-change: max-height;
  }

  .faq-gradient-border {
    will-change: opacity;
  }

  .faq-chevron {
    will-change: transform;
  }

  /* ========================================
     REDUCED MOTION
     ======================================== */
  @media (prefers-reduced-motion: reduce) {
    .faq-orb-1,
    .faq-orb-2 {
      animation: none;
      opacity: 0.5;
    }

    .faq-header-reveal,
    .faq-item-reveal,
    .faq-item {
      opacity: 1;
      transform: none;
      transition: none;
    }

    .section-divider {
      transform: scaleX(1);
      transition: none;
    }

    .faq-gradient-border {
      animation: none;
    }

    .faq-item:hover {
      transform: none;
    }

    .faq-item.active {
      transform: none;
    }
  }
</style>

<script is:inline>
  // FAQ Toggle Function
  function togglePracticeFaq(id) {
    const faqItem = document.querySelector(`[data-faq-id="${id}"]`);
    const answerDiv = faqItem?.querySelector('.faq-answer');
    const button = faqItem?.querySelector('.faq-question');
    const isActive = faqItem?.classList.contains('active');

    // Close all other FAQs
    document.querySelectorAll('.faq-item').forEach(item => {
      if (item !== faqItem) {
        const otherAnswer = item.querySelector('.faq-answer');
        const otherButton = item.querySelector('.faq-question');
        
        item.classList.remove('active');
        otherButton?.setAttribute('aria-expanded', 'false');
        
        if (otherAnswer) {
          otherAnswer.style.maxHeight = '0';
        }
      }
    });

    // Toggle current FAQ
    if (!isActive) {
      faqItem.classList.add('active');
      button?.setAttribute('aria-expanded', 'true');
      
      if (answerDiv) {
        answerDiv.style.maxHeight = answerDiv.scrollHeight + 'px';
      }
    } else {
      faqItem.classList.remove('active');
      button?.setAttribute('aria-expanded', 'false');
      
      if (answerDiv) {
        answerDiv.style.maxHeight = '0';
      }
    }
  }

  // Make function globally available
  window.togglePracticeFaq = togglePracticeFaq;

  // Scroll Reveal Animation - Separate observers for elegant staggered entrance
  document.addEventListener('DOMContentLoaded', () => {
    const faqSection = document.getElementById('practice-faq');
    const header = faqSection?.querySelector('.faq-header-reveal');
    const items = faqSection?.querySelectorAll('.faq-item-reveal');

    if (!faqSection) return;

    // Check for reduced motion preference
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    if (prefersReducedMotion) {
      header?.classList.add('visible');
      items?.forEach(item => item.classList.add('visible'));
      return;
    }

    // Observer options for header - triggers earlier
    const headerObserverOptions = {
      threshold: 0.2,
      rootMargin: '0px 0px -80px 0px'
    };

    // Observer options for items - triggers slightly later
    const itemObserverOptions = {
      threshold: 0.15,
      rootMargin: '0px 0px -50px 0px'
    };

    // Header observer
    const headerObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
          headerObserver.unobserve(entry.target);
        }
      });
    }, headerObserverOptions);

    // Items observer with staggered delay
    const itemObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const target = entry.target;
          const delay = parseInt(target.dataset.delay || '0', 10);

          // Apply staggered delay for elegant sequential reveal
          setTimeout(() => {
            target.classList.add('visible');
          }, delay);

          itemObserver.unobserve(target);
        }
      });
    }, itemObserverOptions);

    // Start observing
    if (header) {
      headerObserver.observe(header);
    }

    items?.forEach(item => {
      itemObserver.observe(item);
    });
  });
</script>
