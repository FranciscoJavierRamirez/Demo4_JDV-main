---
import { getEntry } from 'astro:content';
import Newsletter from './Newsletter.astro';

const footerData = await getEntry('footer', 'home');
const { brand, columns, trust, bottom, legal } = footerData.data;
---

<!-- Footer -->
<footer class="bg-[var(--gray-900)] text-white">
  <!-- Newsletter Section -->
  <Newsletter />

  <!-- Footer Content -->
  <div class="relative py-20 pb-8">
    <!-- Subtle gradient transition from Newsletter -->
    <div class="absolute top-0 left-0 right-0 h-16 bg-gradient-to-b from-[var(--blue-deeper)]/20 to-transparent pointer-events-none"></div>
    
    <div class="container relative">
      <!-- Fila principal: 4 columnas en desktop -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-x-10 gap-y-10">
        <!-- Brand Column -->
        <div class="flex flex-col gap-4">
          <!-- Logo grande con detalles visibles -->
          <div class="flex flex-col gap-4 mb-4">
            <picture>
              <source srcset="/logos/jdv-logo-square-112.webp" type="image/webp" />
              <img
                src="/logos/jdv-logo-square-112.png"
                alt="JDV Abogados"
                class="h-28 w-28 rounded-xl object-cover shadow-lg border border-white/10"
                width="112"
                height="112"
              />
            </picture>
            <h3 class="font-bold text-lg text-[var(--gold)] m-0">{brand.title}</h3>
          </div>
          <p class="opacity-85 leading-relaxed text-[0.9375rem]">{brand.description}</p>

          <!-- Rating -->
          <div class="mt-4">
            <div class="flex gap-1 mb-2">
              {Array.from({ length: Math.floor(brand.rating.stars) }).map(() => (
                <i class="fas fa-star text-[var(--gold)] text-lg"></i>
              ))}
              {brand.rating.stars % 1 !== 0 && <i class="fas fa-star-half-alt text-[var(--gold)] text-lg"></i>}
            </div>
            <p class="text-white/85 text-sm m-0">{brand.rating.text}</p>
          </div>

          <!-- Social -->
          <div class="flex gap-3 mt-2">
            {brand.social.map(social => (
              <a
                href={social.url}
                target="_blank"
                rel="noopener noreferrer"
                aria-label={social.label}
                class="w-11 h-11 flex items-center justify-center bg-white/10 rounded-[10px] text-white no-underline transition-all duration-150 hover:bg-[var(--gold)] hover:text-[var(--gray-900)] hover:-translate-y-0.5"
              >
                <i class={social.icon} aria-hidden="true"></i>
              </a>
            ))}
          </div>
        </div>

        <!-- Áreas de Práctica Column -->
        <div class="flex flex-col gap-4">
          <h3 class="font-bold text-lg mb-2 text-[var(--gold)]">{columns.areas.title}</h3>
          <ul class="list-none flex flex-col gap-3">
            {columns.areas.links.map(link => (
              <li>
                <a href={link.href} class="text-white/85 no-underline transition-all duration-300 ease-out text-[0.9375rem] hover:text-[var(--gold)] hover:translate-x-1 inline-block">
                  {link.text}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Empresa Column -->
        <div class="flex flex-col gap-4">
          <h3 class="font-bold text-lg mb-2 text-[var(--gold)]">{columns.company.title}</h3>
          <ul class="list-none flex flex-col gap-3">
            {columns.company.links.map(link => (
              <li>
                <a href={link.href} class="text-white/85 no-underline transition-all duration-300 ease-out text-[0.9375rem] hover:text-[var(--gold)] hover:translate-x-1 inline-block">
                  {link.text}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Contacto Column -->
        <div class="flex flex-col gap-4">
          <h3 class="font-bold text-lg mb-2 text-[var(--gold)]">{columns.contact.title}</h3>
          <ul class="list-none flex flex-col gap-3">
            {columns.contact.items.map(item => (
              <li class="flex items-center gap-3 opacity-85 text-[0.9375rem]">
                {item.href ? (
                  <a
                    href={item.href}
                    class="flex items-center gap-3 text-white/85 no-underline transition-colors duration-150 hover:text-[var(--gold)]"
                    target={item.href.startsWith('https://wa.me') ? '_blank' : undefined}
                    rel={item.href.startsWith('https://wa.me') ? 'noopener noreferrer' : undefined}
                  >
                    <i class={`${item.icon} text-[var(--gold)] w-5`}></i>
                    <span>{item.text}</span>
                  </a>
                ) : (
                  <>
                    <i class={`${item.icon} text-[var(--gold)] w-5`}></i>
                    <span>{item.text}</span>
                  </>
                )}
              </li>
            ))}
          </ul>
          <p class="text-white/85 mt-4 text-[0.9375rem]">
            <strong>{columns.contact.schedule.title}</strong><br/>
            {columns.contact.schedule.days}<br/>
            {columns.contact.schedule.hours}
          </p>
        </div>
      </div>

      <!-- Fila secundaria: Oficina WTC - Imagen + Mapa -->
      <div class="mt-12 pt-10 border-t border-white/10">
        <h3 class="font-bold text-lg mb-6 text-[var(--gold)]">Nuestra Oficina</h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 max-w-3xl">
          <!-- Imagen Oficina WTC -->
          <div class="rounded-xl overflow-hidden border border-white/10">
            <picture>
              <source srcset="/oficina_WTC.webp" type="image/webp">
              <img
                src="/oficina_WTC.jpg"
                alt="Edificio WTC, Tajamar 481, Torre N Of. 303, Las Condes"
                class="w-full h-48 object-cover"
                loading="lazy"
                decoding="async"
                width="400"
                height="192"
              />
            </picture>
            <div class="px-3 py-2 bg-white/5">
              <p class="text-white/70 text-xs m-0">Tajamar 481 · Torre N, Of. 303 · Las Condes</p>
            </div>
          </div>

          <!-- Mapa Oficina WTC -->
          <div class="rounded-xl overflow-hidden border border-white/10">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3330.0!2d-70.60551!3d-33.41476!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9662cf0b3b5d8c5d%3A0x5e9d5c5b5b5b5b5b!2sTajamar%20481%2C%20Las%20Condes%2C%20Regi%C3%B3n%20Metropolitana!5e0!3m2!1ses!2scl!4v1700000000000!5m2!1ses!2scl"
              width="100%"
              height="192"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="Ubicación oficina WTC, Tajamar 481, Torre N Of. 303, Las Condes"
            ></iframe>
            <a
              href="https://www.google.com/maps/search/?api=1&query=Tajamar+481+Torre+N+Of+303+Las+Condes+Santiago+Chile"
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center justify-center gap-2 py-2 bg-white/5 text-[var(--gold)] text-sm font-medium no-underline transition-colors duration-150 hover:bg-white/10"
            >
              <i class="fas fa-map-marker-alt"></i>
              Ver en Google Maps
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Trust Badges -->
  <div class="bg-white/5 py-10 mt-8">
    <div class="container">
      <h3 class="text-center text-[var(--gray-200)] text-[clamp(1.25rem,2.5vw,1.5rem)] mb-6 font-semibold">
        {trust.title}
      </h3>
      <div class="grid grid-cols-2 sm:grid-cols-4 lg:grid-cols-4 gap-4 max-w-[700px] mx-auto">
        {trust.badges.map(badge => (
          <div class={`flex flex-col items-center text-center p-4 gap-2 rounded-xl border-2 border-transparent transition-all duration-300 ease-out hover:-translate-y-[3px] hover:bg-gradient-to-br hover:from-[rgba(201,169,97,0.15)] hover:to-[rgba(212,175,55,0.1)] hover:border-[rgba(201,169,97,0.3)] hover:shadow-[0_6px_24px_rgba(201,169,97,0.25)] ${badge.featured ? 'bg-gradient-to-br from-[rgba(201,169,97,0.15)] to-[rgba(212,175,55,0.1)] border-[rgba(201,169,97,0.3)] p-5' : ''}`}>
            <i class={`${badge.icon} text-[2rem] text-[var(--gold)] mb-2 transition-all duration-200 ${badge.featured ? 'text-[2.25rem] text-[var(--gold-light)]' : ''}`}></i>
            <span class={`text-[var(--gray-300)] text-sm leading-snug transition-all duration-200 ${badge.featured ? 'text-[var(--gold-light)] font-semibold' : ''}`} set:html={badge.text}></span>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Footer Bottom -->
  <div class="border-t border-white/10 py-8 text-center">
    <div class="container">
      <p class="opacity-70 text-sm">{bottom.copyright}</p>
    </div>
  </div>

  <!-- Footer Legal -->
  <div class="bg-black/30 py-6 border-t border-white/10">
    <div class="container">
      <nav class="flex flex-wrap justify-center gap-4 mb-4" aria-label="Enlaces legales">
        {legal.links.map((link, index) => (
          <>
            <a href={link.href} class="text-[var(--gray-400)] no-underline text-sm transition-colors duration-150 hover:text-[var(--gold)]">
              {link.text}
            </a>
            {index < legal.links.length - 1 && <span class="text-[var(--gray-600)]">|</span>}
          </>
        ))}
      </nav>
      <p class="text-[var(--gray-500)] text-[0.8125rem] text-center max-w-[800px] mx-auto leading-relaxed">
        {legal.disclaimer}
      </p>
    </div>
  </div>

  <!-- Firma del desarrollador -->
  <div class="border-t border-white/5 py-5 bg-black/40">
    <div class="container flex flex-col items-center gap-2">
      <p class="text-[var(--gray-500)] text-xs m-0 flex items-center gap-1.5 flex-wrap justify-center">
        Hecho con
        <svg class="w-4 h-4 inline-block" viewBox="0 0 24 24" fill="#7DD3FC" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
        </svg>
        por
        <a
          href="https://www.healthytek.cl"
          target="_blank"
          rel="noopener noreferrer"
          class="text-sky-300 no-underline font-semibold tracking-wide transition-colors duration-150 hover:text-sky-200"
        >HealthyTEK SpA</a>
      </p>
      <p class="text-[var(--gray-600)] text-[0.6875rem] m-0 italic">Tu Fábrica Digital</p>
      <p class="text-[var(--gray-600)] text-[0.625rem] m-0 flex items-center gap-3 flex-wrap justify-center">
        <a href="https://www.healthytek.cl" target="_blank" rel="noopener noreferrer" class="text-sky-300/70 no-underline transition-colors duration-150 hover:text-sky-200">
          <i class="fas fa-globe w-3.5"></i> www.healthytek.cl
        </a>
        <a href="mailto:contacto@healthytek.cl" class="text-sky-300/70 no-underline transition-colors duration-150 hover:text-sky-200">
          <i class="fas fa-envelope w-3.5"></i> contacto@healthytek.cl
        </a>
        <a href="https://wa.me/56965870256" target="_blank" rel="noopener noreferrer" class="text-sky-300/70 no-underline transition-colors duration-150 hover:text-sky-200">
          <i class="fab fa-whatsapp w-3.5"></i> +56 9 6587 0256
        </a>
      </p>
    </div>
  </div>
</footer>
