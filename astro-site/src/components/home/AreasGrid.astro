---
import { getEntry } from 'astro:content';

const areasData = await getEntry('areas', 'home');

if (!areasData?.data) {
  throw new Error("Areas data not found from content collection");
}

const { sectionTitle, sectionSubtitle, areas } = areasData.data;
---

<section id="areas" class="relative py-24 bg-linear-to-b from-[#dbeafe] via-[#eff6ff] to-[#f8fafc] overflow-hidden">
  <!-- Decorative mesh gradient background -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-1/4 left-1/4 w-[600px] h-[600px] rounded-full blur-[150px] opacity-[0.10] bg-[radial-gradient(circle,var(--blue-primary)_0%,transparent_70%)]"></div>
    <div class="absolute bottom-1/4 right-1/4 w-[500px] h-[500px] rounded-full blur-[120px] opacity-[0.08] bg-[radial-gradient(circle,var(--gold)_0%,transparent_70%)]"></div>
    <!-- Subtle grid pattern -->
    <div class="absolute inset-0 opacity-[0.015]" style="background-image: linear-gradient(var(--blue-primary) 1px, transparent 1px), linear-gradient(90deg, var(--blue-primary) 1px, transparent 1px); background-size: 60px 60px;"></div>
  </div>
  <div class="container relative z-10">
    <!-- Section Header with Pill/Badge -->
    <div class="text-center mb-16 scroll-reveal-header">
      <!-- Elevated Pill Container -->
      <div class="section-pill inline-block relative mb-6">
        <!-- Glow effect behind -->
        <div class="absolute inset-0 bg-linear-to-r from-(--blue-primary)/20 via-(--gold)/15 to-(--blue-primary)/20 rounded-full blur-xl opacity-60"></div>
        
        <!-- Pill content -->
        <div class="relative bg-white/95 backdrop-blur-sm px-8 py-4 rounded-full shadow-[0_4px_20px_rgba(0,0,0,0.08),0_8px_40px_rgba(59,130,246,0.12)] border border-white/80">
          <!-- Decorative icon -->
          <div class="absolute -left-3 top-1/2 -translate-y-1/2 w-10 h-10 bg-linear-to-br from-(--gold) to-(--gold-dark) rounded-full flex items-center justify-center shadow-[0_4px_12px_rgba(201,169,97,0.4)]">
            <i class="fas fa-balance-scale text-white text-sm"></i>
          </div>
          
          <h2 class="text-[clamp(1.75rem,3.5vw,2.5rem)] font-extrabold bg-linear-to-r from-[#1e3a5f] via-[#2563eb] to-[#3b82f6] bg-clip-text text-transparent tracking-[-0.02em] pl-6">
            {sectionTitle}
          </h2>
        </div>
      </div>
      
      <p class="text-[clamp(1.125rem,2vw,1.25rem)] text-(--gray-600) max-w-[700px] mx-auto leading-relaxed">
        {sectionSubtitle}
      </p>
    </div>

    <!-- Bento Grid Layout -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 auto-rows-[minmax(300px,auto)]">
      {areas.map((area, index) => {
        const isFeatured = index === 0 || index === 1;
        return (
          <a 
            href={area.link}
            class={`area-card scroll-reveal-card group relative rounded-[24px] overflow-hidden cursor-pointer flex flex-col justify-end transition-all duration-500
              ${isFeatured ? 'md:col-span-2 lg:col-span-2 min-h-[360px]' : 'col-span-1 min-h-[300px]'}
            `}
            style={`transition-delay: ${index * 80}ms`}
          >
            <!-- Background Image Layer - Reveals on hover -->
            {area.image && (
              <div class="absolute inset-0 z-0">
                <img 
                  src={area.image} 
                  alt=""
                  class="card-bg-image w-full h-full object-cover"
                  loading="lazy"
                />
                <!-- Color overlay - moves with content on hover -->
                <div class="card-overlay absolute inset-0"></div>
              </div>
            )}
            
            <!-- Glassmorphism Content Container - Moves DOWN on hover -->
            <div class="card-content relative z-10 p-4 md:p-5">
              <!-- Glass background -->
              <div class="absolute inset-0 glass-bg transition-all duration-500 rounded-t-[16px]"></div>
              
              <div class="relative z-10">
                <!-- Icon + Title Row -->
                <div class="flex items-center gap-3 mb-2">
                  <div class={`card-icon w-10 h-10 flex items-center justify-center rounded-xl transition-all duration-500 shadow-md shrink-0
                    ${isFeatured 
                      ? 'bg-linear-to-br from-(--blue-primary) to-(--blue-deeper) text-white' 
                      : 'bg-white/90 backdrop-blur-sm text-(--blue-primary) border border-white/50'}
                  `}>
                    <i class={`${area.icon} text-lg`}></i>
                  </div>
                  <h3 class={`card-title font-bold leading-tight transition-all duration-300
                    ${isFeatured ? 'text-xl md:text-2xl' : 'text-lg'}
                  `}>
                    {area.title}
                  </h3>
                </div>
                
                <!-- Description -->
                <p class="card-description text-sm leading-snug mb-3 transition-all duration-300 line-clamp-2">
                  {area.description}
                </p>
                
                <!-- Action -->
                <div class="card-action flex items-center gap-2 font-semibold text-xs tracking-wide uppercase transition-all duration-300">
                  <span>Explorar √Årea</span>
                  <i class="fas fa-arrow-right text-xs transition-transform duration-300 group-hover:translate-x-2"></i>
                </div>
              </div>
            </div>
            
            <!-- Spotlight Effect Layer -->
            <div class="spotlight absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none z-5"></div>
          </a>
        );
      })}
    </div>
  </div>
</section>

<style>
  /* Typography - Display font for headings */
  #areas h2,
  #areas h3 {
    font-family: var(--font-display);
  }

  /* Section Pill styling */
  .section-pill {
    animation: pillFloat 3s ease-in-out infinite;
  }
  
  .section-pill:hover {
    animation-play-state: paused;
  }
  
  .section-pill:hover > div:last-child {
    transform: translateY(-2px);
    box-shadow: 
      0 8px 30px rgba(0, 0, 0, 0.1),
      0 12px 50px rgba(59, 130, 246, 0.18);
  }
  
  @keyframes pillFloat {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-4px);
    }
  }
  
  /* Base card styling - Glassmorphism */
  .area-card {
    background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(249,250,251,0.9) 100%);
    border: 1px solid rgba(255,255,255,0.8);
    box-shadow: 
      0 4px 6px -1px rgba(0, 0, 0, 0.05),
      0 2px 4px -1px rgba(0, 0, 0, 0.03),
      inset 0 1px 0 rgba(255,255,255,0.6);
  }

  .area-card:hover {
    transform: translateY(-4px);
    box-shadow: 
      0 25px 50px -12px rgba(0, 0, 0, 0.25),
      0 0 0 1px rgba(59, 130, 246, 0.15);
  }

  /* Background image - visible by default, moves UP on hover to reveal */
  .card-bg-image {
    filter: grayscale(20%) brightness(1.05);
    transform: translateY(0) scale(1.02);
    opacity: 0.75;
    transform-origin: center bottom;
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .area-card:hover .card-bg-image {
    filter: grayscale(0%) saturate(1.3) brightness(1);
    transform: translateY(-25px) scale(1.1);
    opacity: 1;
  }

  /* Overlay gradient - lighter to show image, adapts on hover for "opening" effect */
  .card-overlay {
    background: linear-gradient(
      to top,
      rgba(255,255,255,0.9) 0%,
      rgba(255,255,255,0.6) 30%,
      rgba(255,255,255,0.1) 50%,
      transparent 70%
    );
    transform: translateY(0);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .area-card:hover .card-overlay {
    background: linear-gradient(
      to top,
      rgba(12,35,64,0.9) 0%,
      rgba(12,35,64,0.6) 25%,
      rgba(12,35,64,0.2) 45%,
      transparent 65%
    );
    transform: translateY(30px);
  }

  /* Glass background for content */
  .glass-bg {
    background: rgba(255,255,255,0.88);
    backdrop-filter: blur(12px);
    border-top: 1px solid rgba(255,255,255,0.5);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .area-card:hover .glass-bg {
    background: rgba(12,35,64,0.85);
    backdrop-filter: blur(16px);
    border-top-color: rgba(255,255,255,0.2);
  }

  /* Text colors transition */
  .card-title {
    color: var(--gray-900);
  }

  .area-card:hover .card-title {
    color: white;
  }

  .card-description {
    color: var(--gray-600);
  }

  .area-card:hover .card-description {
    color: rgba(255,255,255,0.9);
  }

  .card-action {
    color: var(--blue-primary);
  }

  .area-card:hover .card-action {
    color: var(--gold);
  }

  /* Icon styling on hover */
  .area-card:hover .card-icon {
    transform: scale(1.15);
    box-shadow: 0 8px 20px rgba(0,0,0,0.25);
  }

  .area-card:hover .card-icon:not(.bg-linear-to-br) {
    background: var(--gold);
    color: white;
    border-color: transparent;
  }

  /* Featured cards special styling */
  .area-card:nth-child(1),
  .area-card:nth-child(2) {
    border-color: rgba(59, 130, 246, 0.15);
  }

  .area-card:nth-child(1):hover,
  .area-card:nth-child(2):hover {
    box-shadow: 
      0 30px 60px -15px rgba(59, 130, 246, 0.35),
      0 0 0 1px rgba(59, 130, 246, 0.2);
  }

  /* Spotlight effect */
  .spotlight {
    background: radial-gradient(
      600px circle at var(--mouse-x) var(--mouse-y),
      rgba(201, 169, 97, 0.15),
      transparent 40%
    );
  }

  /* Content container positioning - moves DOWN on hover creating "opening" effect */
  .card-content {
    margin-top: auto;
    transform: translateY(0);
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .area-card:hover .card-content {
    transform: translateY(30px);
  }

  /* ========================================
     Scroll Reveal Animations
     ======================================== */
  
  /* Header animation - slides down with scale */
  .scroll-reveal-header {
    opacity: 0;
    transform: translateY(-25px) scale(0.98);
    transition: 
      opacity 0.7s cubic-bezier(0.16, 1, 0.3, 1),
      transform 0.7s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .scroll-reveal-header.visible {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  /* Card animation - slides up with subtle scale */
  .scroll-reveal-card {
    opacity: 0;
    transform: translateY(50px) scale(0.97);
    transition: 
      opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1),
      transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .scroll-reveal-card.visible {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .scroll-reveal-header,
    .scroll-reveal-card {
      opacity: 1;
      transform: none;
      transition: none;
    }
  }
</style>

<script>
  // ========================================
  // Scroll Reveal Animation with IntersectionObserver
  // ========================================
  const section = document.getElementById('areas');
  const header = section?.querySelector('.scroll-reveal-header');
  const cards = section?.querySelectorAll('.scroll-reveal-card');

  if (section) {
    const observerOptions: IntersectionObserverInit = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const revealObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // Reveal header first
          if (header) {
            header.classList.add('visible');
          }
          
          // Then reveal cards with staggered delay
          cards?.forEach((card, index) => {
            setTimeout(() => {
              card.classList.add('visible');
            }, 150 + (index * 100)); // Start after header, then stagger
          });
          
          // Stop observing after animation triggered
          revealObserver.disconnect();
        }
      });
    }, observerOptions);

    revealObserver.observe(section);
  }

  // ========================================
  // Spotlight Effect (Mouse tracking)
  // ========================================
  const areaCards = document.querySelectorAll<HTMLElement>('.area-card');
  areaCards.forEach(card => {
    card.addEventListener('mousemove', (e: MouseEvent) => {
      const rect = card.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;
      card.style.setProperty('--mouse-x', `${x}px`);
      card.style.setProperty('--mouse-y', `${y}px`);
    });
  });
</script>
