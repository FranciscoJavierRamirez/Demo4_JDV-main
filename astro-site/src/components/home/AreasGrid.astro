---
import { getEntry } from 'astro:content';

const areasData = await getEntry('areas', 'home');

if (!areasData?.data) {
  throw new Error("Areas data not found from content collection");
}

const { sectionTitle, sectionSubtitle, areas } = areasData.data;
---

<section id="areas" class="relative py-24 bg-[var(--blue-deeper)] overflow-hidden">
  <!-- Mesh Gradient Orbs -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <div class="absolute top-[-20%] left-[-10%] w-[70%] h-[70%] rounded-full bg-[radial-gradient(circle,rgba(59,130,246,0.4)_0%,transparent_70%)] blur-[120px] animate-[areasFloat_20s_ease-in-out_infinite]"></div>
    <div class="absolute bottom-[-30%] right-[-10%] w-[60%] h-[60%] rounded-full bg-[radial-gradient(circle,rgba(29,78,216,0.4)_0%,transparent_70%)] blur-[100px] animate-[areasFloat_25s_ease-in-out_infinite_reverse]"></div>
    <div class="absolute top-[40%] right-[20%] w-[40%] h-[40%] rounded-full bg-[radial-gradient(circle,rgba(201,162,84,0.15)_0%,transparent_70%)] blur-[80px] animate-[areasFloat_15s_ease-in-out_5s_infinite]"></div>
  </div>
  <!-- Noise Texture -->
  <div class="absolute inset-0 opacity-[0.03] pointer-events-none">
    <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
      <filter id="areasNoise"><feTurbulence baseFrequency="0.65" numOctaves="3" stitchTiles="stitch"/></filter>
      <rect width="100%" height="100%" filter="url(#areasNoise)"/>
    </svg>
  </div>
  <!-- Gradient Overlay -->
  <div class="absolute inset-0 bg-gradient-to-br from-[rgba(12,35,64,0.98)] via-[rgba(12,35,64,0.94)] to-[rgba(26,77,122,0.88)] pointer-events-none"></div>
  <div class="container relative z-10">
    <!-- Section Header with Pill/Badge -->
    <div class="text-center mb-16 scroll-reveal-header">
      <!-- Elevated Pill Container -->
      <div class="section-pill inline-block relative mb-6">
        <!-- Glow effect behind -->
        <div class="absolute inset-0 bg-linear-to-r from-(--blue-primary)/20 via-(--gold)/15 to-(--blue-primary)/20 rounded-full blur-xl opacity-60"></div>
        
        <!-- Pill content -->
        <div class="relative bg-white/95 backdrop-blur-sm px-8 py-4 rounded-full shadow-[0_4px_20px_rgba(0,0,0,0.08),0_8px_40px_rgba(59,130,246,0.12)] border border-white/80">
          <!-- Decorative icon -->
          <div class="absolute -left-3 top-1/2 -translate-y-1/2 w-10 h-10 bg-linear-to-br from-(--gold) to-(--gold-dark) rounded-full flex items-center justify-center shadow-[0_4px_12px_rgba(201,169,97,0.4)]">
            <i class="fas fa-balance-scale text-white text-sm"></i>
          </div>
          
          <h2 class="text-[clamp(1.75rem,3.5vw,2.5rem)] font-extrabold bg-linear-to-r from-[#1e3a5f] via-[#2563eb] to-[#3b82f6] bg-clip-text text-transparent tracking-[-0.02em] pl-6">
            {sectionTitle}
          </h2>
        </div>
      </div>
      
      <p class="text-[clamp(1.125rem,2vw,1.25rem)] text-white/70 max-w-[700px] mx-auto leading-relaxed">
        {sectionSubtitle}
      </p>
    </div>

    <!-- Bento Grid Layout -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 auto-rows-[minmax(300px,auto)]">
      {areas.map((area, index) => {
        const isFeatured = index === 0 || index === 1;
        return (
          <a 
            href={area.link}
            class={`area-card scroll-reveal-card group relative rounded-[24px] overflow-hidden cursor-pointer flex flex-col justify-end transition-all duration-500
              ${isFeatured ? 'md:col-span-2 lg:col-span-2 min-h-[360px]' : 'col-span-1 min-h-[300px]'}
            `}
            style={`transition-delay: ${index * 80}ms`}
          >
            <!-- Background Image Layer - Reveals on hover -->
            {area.image && (
              <div class="absolute inset-0 z-0">
                <img 
                  src={area.image} 
                  alt=""
                  class="card-bg-image w-full h-full object-cover"
                  loading="lazy"
                />
                <!-- Color overlay - moves with content on hover -->
                <div class="card-overlay absolute inset-0"></div>
              </div>
            )}
            
            <!-- Glassmorphism Content Container - Moves DOWN on hover -->
            <div class="card-content relative z-10 p-4 md:p-5">
              <!-- Glass background -->
              <div class="absolute inset-0 glass-bg transition-all duration-500 rounded-t-[16px]"></div>
              
              <div class="relative z-10">
                <!-- Icon + Title Row -->
                <div class="flex items-center gap-3 mb-2">
                  <div class={`card-icon w-10 h-10 flex items-center justify-center rounded-xl transition-all duration-500 shadow-md shrink-0
                    ${isFeatured 
                      ? 'bg-linear-to-br from-(--blue-primary) to-(--blue-deeper) text-white' 
                      : 'bg-white/90 backdrop-blur-sm text-(--blue-primary) border border-white/50'}
                  `}>
                    <i class={`${area.icon} text-lg`}></i>
                  </div>
                  <h3 class={`card-title font-bold leading-tight transition-all duration-300
                    ${isFeatured ? 'text-xl md:text-2xl' : 'text-lg'}
                  `}>
                    {area.title}
                  </h3>
                </div>
                
                <!-- Description -->
                <p class="card-description text-sm leading-snug mb-3 transition-all duration-300 line-clamp-2">
                  {area.description}
                </p>
                
                <!-- Action -->
                <div class="card-action flex items-center gap-2 font-semibold text-xs tracking-wide uppercase transition-all duration-300">
                  <span>Explorar √Årea</span>
                  <i class="fas fa-arrow-right text-xs transition-transform duration-300 group-hover:translate-x-2"></i>
                </div>
              </div>
            </div>
            
            <!-- Spotlight Effect Layer -->
            <div class="spotlight absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none z-5"></div>
          </a>
        );
      })}
    </div>
  </div>
</section>

<style>
  @keyframes areasFloat {
    0%, 100% { transform: translate(0, 0) scale(1); }
    33% { transform: translate(30px, -20px) scale(1.05); }
    66% { transform: translate(-20px, 15px) scale(0.95); }
  }

  /* Typography - Display font for headings */
  #areas h2,
  #areas h3 {
    font-family: var(--font-display);
  }

  /* Section Pill styling */
  .section-pill {
    animation: pillFloat 3s ease-in-out infinite;
  }
  
  .section-pill:hover {
    animation-play-state: paused;
  }
  
  .section-pill:hover > div:last-child {
    transform: translateY(-2px);
    box-shadow: 
      0 8px 30px rgba(0, 0, 0, 0.1),
      0 12px 50px rgba(59, 130, 246, 0.18);
  }
  
  @keyframes pillFloat {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-4px);
    }
  }
  
  /* Base card styling - Glassmorphism */
  .area-card {
    background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(249,250,251,0.9) 100%);
    border: 1px solid rgba(255,255,255,0.8);
    box-shadow: 
      0 4px 6px -1px rgba(0, 0, 0, 0.05),
      0 2px 4px -1px rgba(0, 0, 0, 0.03),
      inset 0 1px 0 rgba(255,255,255,0.6);
  }

  .area-card:hover {
    transform: translateY(-4px);
    box-shadow: 
      0 25px 50px -12px rgba(0, 0, 0, 0.25),
      0 0 0 1px rgba(59, 130, 246, 0.15);
  }

  /* Background image - visible by default, moves UP on hover to reveal */
  .card-bg-image {
    filter: grayscale(20%) brightness(1.05);
    transform: translateY(0) scale(1.02);
    opacity: 0.75;
    transform-origin: center bottom;
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .area-card:hover .card-bg-image {
    filter: grayscale(0%) saturate(1.3) brightness(1);
    transform: translateY(-25px) scale(1.1);
    opacity: 1;
  }

  /* Overlay gradient - lighter to show image, adapts on hover for "opening" effect */
  .card-overlay {
    background: linear-gradient(
      to top,
      rgba(255,255,255,0.9) 0%,
      rgba(255,255,255,0.6) 30%,
      rgba(255,255,255,0.1) 50%,
      transparent 70%
    );
    transform: translateY(0);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .area-card:hover .card-overlay {
    background: linear-gradient(
      to top,
      rgba(12,35,64,0.9) 0%,
      rgba(12,35,64,0.6) 25%,
      rgba(12,35,64,0.2) 45%,
      transparent 65%
    );
    transform: translateY(30px);
  }

  /* Glass background for content */
  .glass-bg {
    background: rgba(255,255,255,0.88);
    backdrop-filter: blur(12px);
    border-top: 1px solid rgba(255,255,255,0.5);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .area-card:hover .glass-bg {
    background: rgba(12,35,64,0.85);
    backdrop-filter: blur(16px);
    border-top-color: rgba(255,255,255,0.2);
  }

  /* Text colors transition */
  .card-title {
    color: var(--gray-900);
  }

  .area-card:hover .card-title {
    color: white;
  }

  .card-description {
    color: var(--gray-600);
  }

  .area-card:hover .card-description {
    color: rgba(255,255,255,0.9);
  }

  .card-action {
    color: var(--blue-primary);
  }

  .area-card:hover .card-action {
    color: var(--gold);
  }

  /* Icon styling on hover */
  .area-card:hover .card-icon {
    transform: scale(1.15);
    box-shadow: 0 8px 20px rgba(0,0,0,0.25);
  }

  .area-card:hover .card-icon:not(.bg-linear-to-br) {
    background: var(--gold);
    color: white;
    border-color: transparent;
  }

  /* Featured cards special styling */
  .area-card:nth-child(1),
  .area-card:nth-child(2) {
    border-color: rgba(59, 130, 246, 0.15);
  }

  .area-card:nth-child(1):hover,
  .area-card:nth-child(2):hover {
    box-shadow: 
      0 30px 60px -15px rgba(59, 130, 246, 0.35),
      0 0 0 1px rgba(59, 130, 246, 0.2);
  }

  /* Spotlight effect */
  .spotlight {
    background: radial-gradient(
      600px circle at var(--mouse-x) var(--mouse-y),
      rgba(201, 169, 97, 0.15),
      transparent 40%
    );
  }

  /* Content container positioning - moves DOWN on hover creating "opening" effect */
  .card-content {
    margin-top: auto;
    transform: translateY(0);
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .area-card:hover .card-content {
    transform: translateY(30px);
  }

  /* ========================================
     Scroll Reveal Animations
     ======================================== */
  
  /* Header animation - slides down with scale */
  .scroll-reveal-header {
    opacity: 0;
    transform: translateY(-25px) scale(0.98);
    transition: 
      opacity 0.7s cubic-bezier(0.16, 1, 0.3, 1),
      transform 0.7s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .scroll-reveal-header.visible {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  /* Card animation - slides up with subtle scale */
  .scroll-reveal-card {
    opacity: 0;
    transform: translateY(50px) scale(0.97);
    transition: 
      opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1),
      transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .scroll-reveal-card.visible {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .scroll-reveal-header,
    .scroll-reveal-card {
      opacity: 1;
      transform: none;
      transition: none;
    }
    
    .section-pill {
      animation: none;
    }
  }

  /* ========================================
     Mobile-Specific Premium Animations
     Elegant, fluid, bidirectional scroll reveal
     ======================================== */
  
  @media (max-width: 768px) {
    /* Premium card reveal with elegant easing - bidirectional */
    .scroll-reveal-card {
      opacity: 0;
      transform: translateY(30px);
      filter: blur(4px);
      transition: 
        opacity 0.9s cubic-bezier(0.25, 0.46, 0.45, 0.94),
        transform 0.9s cubic-bezier(0.25, 0.46, 0.45, 0.94),
        filter 0.7s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }
    
    .scroll-reveal-card.visible {
      opacity: 1;
      transform: translateY(0);
      filter: blur(0);
    }
    
    /* Staggered animation delay based on card index via CSS custom property */
    .scroll-reveal-card:nth-child(1) { transition-delay: 0ms; }
    .scroll-reveal-card:nth-child(2) { transition-delay: 80ms; }
    .scroll-reveal-card:nth-child(3) { transition-delay: 160ms; }
    .scroll-reveal-card:nth-child(4) { transition-delay: 240ms; }
    .scroll-reveal-card:nth-child(5) { transition-delay: 320ms; }
    .scroll-reveal-card:nth-child(6) { transition-delay: 400ms; }
    
    /* Header reveal - elegant fade with blur */
    .scroll-reveal-header {
      opacity: 0;
      transform: translateY(-20px);
      filter: blur(3px);
      transition: 
        opacity 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94),
        transform 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94),
        filter 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }
    
    .scroll-reveal-header.visible {
      opacity: 1;
      transform: translateY(0);
      filter: blur(0);
    }
    
    /* Tactile feedback for mobile touch interactions */
    .area-card:active {
      transform: scale(0.985) !important;
      transition: transform 0.15s cubic-bezier(0.25, 0.46, 0.45, 0.94) !important;
    }
    
    .area-card:active .glass-bg {
      background: rgba(255,255,255,0.95);
    }
    
    /* Disable hover effects on mobile for cleaner touch experience */
    .area-card:hover {
      transform: none;
    }
    
    .area-card:hover .card-content {
      transform: translateY(0);
    }
    
    .area-card:hover .card-bg-image {
      transform: translateY(0) scale(1.02);
      filter: grayscale(20%) brightness(1.05);
      opacity: 0.75;
    }
    
    .area-card:hover .card-overlay {
      background: linear-gradient(
        to top,
        rgba(255,255,255,0.9) 0%,
        rgba(255,255,255,0.6) 30%,
        rgba(255,255,255,0.1) 50%,
        transparent 70%
      );
      transform: translateY(0);
    }
    
    .area-card:hover .glass-bg {
      background: rgba(255,255,255,0.88);
      border-top-color: rgba(255,255,255,0.5);
    }
    
    .area-card:hover .card-title {
      color: var(--gray-900);
    }
    
    .area-card:hover .card-description {
      color: var(--gray-600);
    }
    
    .area-card:hover .card-action {
      color: var(--blue-primary);
    }
    
    .area-card:hover .card-icon {
      transform: none;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
    
    .area-card:hover .card-icon:not(.bg-linear-to-br) {
      background: rgba(255,255,255,0.9);
      color: var(--blue-primary);
      border-color: rgba(255,255,255,0.5);
    }
  }
  
  /* Performance optimizations for mobile */
  @media (max-width: 768px) {
    .scroll-reveal-card,
    .scroll-reveal-header {
      will-change: opacity, transform, filter;
    }
    
    .scroll-reveal-card.visible,
    .scroll-reveal-header.visible {
      will-change: auto;
    }
  }
</style>

<script>
  // ========================================
  // Premium Scroll Reveal Animation System
  // Bidirectional, fluid animations for mobile & desktop
  // ========================================
  const section = document.getElementById('areas');
  const header = section?.querySelector('.scroll-reveal-header') as HTMLElement | null;
  const cards = section?.querySelectorAll<HTMLElement>('.scroll-reveal-card');

  // Detect mobile viewport
  const isMobile = window.matchMedia('(max-width: 768px)').matches;
  
  // Check for reduced motion preference
  const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

  if (section && !prefersReducedMotion) {
    if (isMobile) {
      // ========================================
      // MOBILE: Bidirectional scroll animations
      // Cards reveal/hide based on viewport visibility
      // ========================================
      
      // Header observer - bidirectional
      if (header) {
        const headerObserverOptions: IntersectionObserverInit = {
          threshold: [0, 0.2, 0.4],
          rootMargin: '50px 0px -20px 0px'
        };
        
        const headerObserver = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting && entry.intersectionRatio >= 0.2) {
              header.classList.add('visible');
            } else if (!entry.isIntersecting) {
              // Optional: remove visible class when scrolling back up
              // header.classList.remove('visible');
            }
          });
        }, headerObserverOptions);
        
        headerObserver.observe(header);
      }
      
      // Card observers - bidirectional with smooth reveal
      const cardObserverOptions: IntersectionObserverInit = {
        threshold: [0, 0.1, 0.25, 0.5],
        rootMargin: '20px 0px -60px 0px'
      };
      
      // Track last scroll position for direction detection
      let lastScrollY = window.scrollY;
      let scrollDirection: 'up' | 'down' = 'down';
      
      window.addEventListener('scroll', () => {
        scrollDirection = window.scrollY > lastScrollY ? 'down' : 'up';
        lastScrollY = window.scrollY;
      }, { passive: true });
      
      cards?.forEach((card, index) => {
        const cardObserver = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            const ratio = entry.intersectionRatio;
            
            if (entry.isIntersecting) {
              // Progressive reveal based on visibility
              if (ratio >= 0.1) {
                // Use requestAnimationFrame for smooth animation
                requestAnimationFrame(() => {
                  card.classList.add('visible');
                });
              }
            } else {
              // When card exits viewport, optionally hide for re-animation
              // Only hide if scrolling up and card is above viewport
              if (scrollDirection === 'up' && entry.boundingClientRect.top > window.innerHeight) {
                card.classList.remove('visible');
              }
            }
          });
        }, cardObserverOptions);
        
        cardObserver.observe(card);
      });

      // Fallback con delay para Chrome mobile (si el observer no dispara en 500ms)
      setTimeout(() => {
        if (header && !header.classList.contains('visible')) {
          const headerRect = header.getBoundingClientRect();
          if (headerRect.top < window.innerHeight && headerRect.bottom >= 0) {
            header.classList.add('visible');
          }
        }
        cards?.forEach(card => {
          if (!card.classList.contains('visible')) {
            const cardRect = card.getBoundingClientRect();
            if (cardRect.top < window.innerHeight && cardRect.bottom >= 0) {
              requestAnimationFrame(() => card.classList.add('visible'));
            }
          }
        });
      }, 500);
      
    } else {
      // ========================================
      // DESKTOP: Staggered animation when section is visible
      // All cards animate together with delay
      // ========================================
      const observerOptions: IntersectionObserverInit = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      };

      const revealObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            // Reveal header first
            if (header) {
              header.classList.add('visible');
            }
            
            // Then reveal cards with staggered delay
            cards?.forEach((card, index) => {
              setTimeout(() => {
                card.classList.add('visible');
              }, 150 + (index * 100));
            });
            
            revealObserver.disconnect();
          }
        });
      }, observerOptions);

      revealObserver.observe(section);

      // Fallback con delay para Chrome desktop (si el observer no dispara en 500ms)
      setTimeout(() => {
        if (!header?.classList.contains('visible')) {
          const rect = section.getBoundingClientRect();
          if (rect.top < window.innerHeight && rect.bottom >= 0) {
            if (header) header.classList.add('visible');
            cards?.forEach((card, index) => {
              setTimeout(() => card.classList.add('visible'), 150 + (index * 100));
            });
            revealObserver.disconnect();
          }
        }
      }, 500);
    }
  } else if (prefersReducedMotion) {
    // Immediately show all elements for users who prefer reduced motion
    header?.classList.add('visible');
    cards?.forEach(card => card.classList.add('visible'));
  }

  // ========================================
  // Spotlight Effect (Mouse tracking) - Desktop only
  // ========================================
  if (!isMobile) {
    const areaCards = document.querySelectorAll<HTMLElement>('.area-card');
    areaCards.forEach(card => {
      card.addEventListener('mousemove', (e: MouseEvent) => {
        const rect = card.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        card.style.setProperty('--mouse-x', `${x}px`);
        card.style.setProperty('--mouse-y', `${y}px`);
      });
    });
  }
</script>
