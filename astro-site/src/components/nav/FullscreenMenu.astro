---
const menuItems = [
  { href: "/", label: "Inicio" },
  { href: "/#areas", label: "Áreas de Práctica" },
  { href: "/", label: "Quiénes Somos" },
  { href: "/", label: "Blog" },
  { href: "/#faq", label: "FAQ" },
  { href: "/", label: "Contacto" }
];
---

<!-- Full Screen Mobile Menu -->
<div 
  id="fullscreenMenu" 
  class="fullscreen-menu fixed inset-0 z-[9999] opacity-0 invisible transition-all duration-500 ease-[cubic-bezier(0.16,1,0.3,1)]"
  role="dialog" 
  aria-modal="true" 
  aria-label="Menú de navegación"
>
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-[#0c2340] via-[#1a4d7a] to-[#0077C8]" aria-hidden="true"></div>
  
  <!-- Content -->
  <div class="relative h-full flex flex-col justify-center px-8 py-24">
    <nav class="flex flex-col gap-2" aria-label="Navegación principal">
      {menuItems.map((item, index) => (
        <a 
          href={item.href} 
          class="fullscreen-link group flex items-center gap-6 py-4 text-white no-underline opacity-0 -translate-x-8 transition-all duration-500 ease-[cubic-bezier(0.16,1,0.3,1)]"
          style={`transition-delay: ${index * 80}ms`}
          aria-label={`Ir a ${item.label}`}
        >
          <span class="link-number font-mono text-sm text-[var(--gold)] opacity-60 w-8" aria-hidden="true">
            {String(index + 1).padStart(2, '0')}
          </span>
          <span class="link-text font-[var(--font-display)] text-[clamp(1.75rem,5vw,3rem)] font-bold tracking-[-0.02em] transition-all duration-300 group-hover:text-[var(--gold)] group-hover:translate-x-4">
            {item.label}
          </span>
        </a>
      ))}
    </nav>

    <!-- Footer -->
    <div class="fullscreen-footer mt-auto pt-12 opacity-0 translate-y-8 transition-all duration-500 ease-[cubic-bezier(0.16,1,0.3,1)] delay-500">
      <a 
        href="https://wa.me/56965870256?text=Necesito%20m%C3%A1s%20informaci%C3%B3n%20porque%20estoy%20interesado%20en%20recibir%20asesor%C3%ADa%20legal"
        target="_blank"
        rel="noopener noreferrer"
        class="mobile-cta-btn w-full max-w-md py-5 px-8 text-[var(--gray-900)] border-none rounded-2xl font-bold text-lg cursor-pointer transition-all duration-200 hover:-translate-y-1 flex items-center justify-center gap-2 no-underline"
        aria-label="Contactar por WhatsApp para consulta gratuita"
        onclick="document.getElementById('fullscreenMenu').classList.remove('active'); document.getElementById('navTogglePremium').classList.remove('active'); document.body.style.overflow = '';"
      >
        <i class="fab fa-whatsapp"></i>
        Agendar Consulta
      </a>
    </div>
  </div>
</div>

<style>
  .fullscreen-menu.active {
    opacity: 1;
    visibility: visible;
  }

  .fullscreen-menu.active .fullscreen-link {
    opacity: 1;
    transform: translateX(0);
  }

  .fullscreen-menu.active .fullscreen-footer {
    opacity: 1;
    transform: translateY(0);
  }

  /* Mobile CTA Button - Gold gradient styling */
  .mobile-cta-btn {
    background: linear-gradient(135deg, #C9A254 0%, #D4C5A0 50%, #B89350 100%);
    box-shadow: 
      0 4px 12px 0 rgba(201, 162, 84, 0.2),
      0 16px 32px 0 rgba(201, 162, 84, 0.15);
  }

  .mobile-cta-btn:hover {
    box-shadow: 0 8px 24px rgba(201, 169, 97, 0.5);
  }
</style>
