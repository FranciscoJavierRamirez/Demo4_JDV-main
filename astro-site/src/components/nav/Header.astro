---
import MegaMenu from './MegaMenu.astro';
import FullscreenMenu from './FullscreenMenu.astro';
---

<!-- Navigation Premium 2026 - V.T.E.F. -->
<nav 
  id="mainNav" 
  role="navigation" 
  aria-label="Navegación principal"
  class="fixed top-0 left-0 right-0 z-[1000] bg-[rgba(250,250,249,0.85)] backdrop-blur-[20px] backdrop-saturate-[180%] border-b border-white/30 transition-all duration-200 shadow-[0_4px_20px_0_rgba(0,0,0,0.08)]"
>
  <div class="flex items-center justify-between h-[72px] px-4 sm:px-6 max-w-[1440px] mx-auto">
    <!-- Logo -->
    <div class="nav-logo">
      <a 
        href="#hero" 
        class="logo-text flex items-center gap-1.5 font-[var(--font-display)] text-[1.5rem] sm:text-[1.75rem] font-bold tracking-[-0.02em] no-underline transition-all duration-300 hover:scale-105"
        aria-label="JDV & Abogados - Ir a inicio"
      >
        <span class="bg-gradient-to-br from-[#C9A961] to-[#D4AF37] bg-clip-text text-transparent">JDV</span>
        <span class="text-[var(--gray-300)] font-light">&</span>
        <span class="bg-gradient-to-br from-[#C9A961] to-[#D4AF37] bg-clip-text text-transparent">Abogados</span>
      </a>
    </div>

    <!-- Mobile Hamburger Button -->
    <button 
      id="navTogglePremium"
      class="nav-toggle-premium lg:hidden flex flex-col items-end gap-1 bg-transparent border-none p-2 cursor-pointer relative z-[10001]"
      aria-label="Abrir menú de navegación"
      aria-expanded="false"
      aria-controls="fullscreenMenu"
    >
      <span class="line line-1 w-7 h-0.5 bg-[var(--gray-900)] rounded transition-all duration-300" aria-hidden="true"></span>
      <span class="line line-2 w-5 h-0.5 bg-[var(--gray-900)] rounded transition-all duration-300" aria-hidden="true"></span>
      <span class="line line-3 w-7 h-0.5 bg-[var(--gray-900)] rounded transition-all duration-300" aria-hidden="true"></span>
    </button>

    <!-- Desktop Menu -->
    <ul class="nav-menu-desktop hidden lg:flex items-center gap-8 list-none" role="menubar">
      <li role="none">
        <a href="#hero" class="nav-link-desktop" role="menuitem">Inicio</a>
      </li>
      <li role="none">
        <button 
          id="areasToggle"
          class="nav-link-desktop flex items-center gap-1.5"
          aria-expanded="false"
          aria-haspopup="true"
          aria-controls="megaMenu"
          role="menuitem"
        >
          Áreas de Práctica
          <i class="fas fa-chevron-down text-[0.6rem] opacity-60 transition-transform duration-300" aria-hidden="true"></i>
        </button>
      </li>
      <li role="none"><a href="#about" class="nav-link-desktop" role="menuitem">Quiénes Somos</a></li>
      <li role="none"><a href="../blog/" class="nav-link-desktop" role="menuitem">Blog</a></li>
      <li role="none"><a href="#faq" class="nav-link-desktop" role="menuitem">FAQ</a></li>
      <li role="none"><a href="#contact" class="nav-link-desktop" role="menuitem">Contacto</a></li>
      <li role="none">
        <button 
          class="btn-nav-cta inline-flex items-center gap-2 px-5 py-2.5 bg-[var(--gold-gradient)] text-[var(--gray-900)] border-none rounded-xl font-semibold text-sm cursor-pointer shadow-[0_4px_12px_rgba(201,169,97,0.25)] transition-all duration-300 hover:-translate-y-0.5 hover:shadow-[0_8px_20px_rgba(201,169,97,0.35)]"
          onclick="openModal()" 
          aria-label="Abrir formulario de consulta gratuita"
        >
          <span>Consulta Gratuita</span>
          <i class="fas fa-arrow-right text-xs" aria-hidden="true"></i>
        </button>
      </li>
    </ul>
  </div>
</nav>

<!-- MegaMenu outside nav for proper fixed positioning -->
<MegaMenu />
<FullscreenMenu />

<style>
  /* Desktop nav link styles */
  .nav-link-desktop {
    position: relative;
    font-weight: 500;
    font-size: 0.875rem;
    color: var(--gray-700);
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem 0;
    display: flex;
    align-items: center;
    gap: 0.375rem;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .nav-link-desktop::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--blue-primary) 0%, var(--gold) 100%);
    transition: width 0.3s ease;
    border-radius: 2px;
  }

  .nav-link-desktop:hover::after {
    width: 100%;
  }

  .nav-link-desktop:hover {
    color: var(--blue-primary);
  }

  /* Chevron rotation when mega menu is open */
  #areasToggle[aria-expanded="true"] i {
    transform: rotate(180deg);
  }

  /* Hamburger active state */
  .nav-toggle-premium.active .line-1 {
    transform: translateY(6px) rotate(45deg);
    background: white;
  }

  .nav-toggle-premium.active .line-2 {
    opacity: 0;
    transform: scaleX(0);
  }

  .nav-toggle-premium.active .line-3 {
    transform: translateY(-6px) rotate(-45deg);
    background: white;
  }

  /* Scrolled state */
  #mainNav.scrolled {
    background: rgba(250, 250, 249, 0.95);
    box-shadow: 0 4px 20px 0 rgba(0, 0, 0, 0.1);
  }
</style>
