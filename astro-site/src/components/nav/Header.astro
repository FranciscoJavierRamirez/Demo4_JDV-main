---
import MegaMenu from './MegaMenu.astro';
import FullscreenMenu from './FullscreenMenu.astro';
---

<!-- Navigation Premium 2026 -->
<nav class="main-nav" id="mainNav">
  <div class="nav-container">
    <div class="nav-logo">
      <a href="#hero" class="logo-text">
        <span class="logo-jdvi">JDV</span>
        <span class="logo-separator">&</span>
        <span class="logo-abogados">Abogados</span>
      </a>
    </div>

    <!-- Botón Hamburger Premium -->
    <button class="nav-toggle-premium" id="navTogglePremium" aria-label="Menú">
      <span class="line line-1"></span>
      <span class="line line-2"></span>
      <span class="line line-3"></span>
      <span class="menu-label">Menú</span>
    </button>

    <!-- Desktop Menu -->
    <ul class="nav-menu-desktop">
      <li><a href="#hero" class="nav-link-premium">Inicio</a></li>
      <li class="has-mega">
        <button class="nav-link-premium" id="areasToggle">
          Áreas de Práctica
          <i class="fas fa-chevron-down chevron-icon"></i>
        </button>
      </li>
      <li><a href="#about" class="nav-link-premium">Quiénes Somos</a></li>
      <li><a href="../blog/" class="nav-link-premium">Blog</a></li>
      <li><a href="#faq" class="nav-link-premium">FAQ</a></li>
      <li><a href="#contact" class="nav-link-premium">Contacto</a></li>
      <li>
        <button class="btn-nav-cta" onclick="openModal()">
          <span>Consulta Gratuita</span>
          <i class="fas fa-arrow-right"></i>
        </button>
      </li>
    </ul>
  </div>

  <MegaMenu />
  <FullscreenMenu />
</nav>
