<div class="profile-card-wrapper">
  <div class="relative bg-white/[0.06] backdrop-blur-xl border border-white/[0.1] rounded-2xl sm:rounded-3xl p-5 sm:p-6 shadow-[0_8px_32px_rgba(0,0,0,0.2),inset_0_1px_0_rgba(255,255,255,0.05)] overflow-hidden">
    <!-- Subtle gradient accent -->
    <div class="absolute top-0 left-0 right-0 h-[2px] bg-gradient-to-r from-transparent via-[var(--gold)] to-transparent opacity-30"></div>

    <!-- Avatar -->
    <div class="flex flex-col items-center text-center mb-5">
      <div class="relative mb-4">
        <div class="absolute inset-[-6px] bg-[radial-gradient(circle,rgba(201,169,97,0.2)_0%,transparent_70%)] rounded-full animate-[profilePulse_4s_ease-in-out_infinite]"></div>
        <div class="relative w-18 h-18 sm:w-20 sm:h-20 rounded-full bg-gradient-to-br from-[var(--gold)] to-[#D4AF37] flex items-center justify-center shadow-[0_4px_20px_rgba(201,169,97,0.35)]">
          <span class="text-xl sm:text-2xl font-bold text-white font-[var(--font-display)]">JD</span>
        </div>
      </div>
      <h3 class="font-[var(--font-display)] text-lg font-bold text-white">Jacqueline Del Valle</h3>
      <p class="text-sm text-white/50 font-medium mt-0.5">JDV Abogados</p>
    </div>

    <!-- Divider -->
    <div class="h-px bg-gradient-to-r from-transparent via-white/10 to-transparent mb-5"></div>

    <!-- Details -->
    <ul class="space-y-3.5 text-sm">
      <li class="flex items-start gap-3 text-white/70">
        <div class="w-8 h-8 min-w-[2rem] flex items-center justify-center rounded-lg bg-white/[0.06] border border-white/[0.08]">
          <i class="fas fa-clock text-[var(--gold)] text-xs"></i>
        </div>
        <span class="pt-1">Consulta de <strong class="text-white font-semibold">30 minutos</strong></span>
      </li>
      <li class="flex items-start gap-3 text-white/70">
        <div class="w-8 h-8 min-w-[2rem] flex items-center justify-center rounded-lg bg-white/[0.06] border border-white/[0.08]">
          <i class="fas fa-shield-alt text-[var(--gold)] text-xs"></i>
        </div>
        <span class="pt-1">Sesi√≥n <strong class="text-white font-semibold">confidencial</strong></span>
      </li>
      <li class="flex items-start gap-3 text-white/70">
        <div class="w-8 h-8 min-w-[2rem] flex items-center justify-center rounded-lg bg-white/[0.06] border border-white/[0.08]">
          <i class="fas fa-video text-[var(--gold)] text-xs"></i>
        </div>
        <span class="pt-1">Virtual o presencial</span>
      </li>
      <li class="flex items-start gap-3 text-white/70">
        <div class="w-8 h-8 min-w-[2rem] flex items-center justify-center rounded-lg bg-white/[0.06] border border-white/[0.08]">
          <i class="fas fa-envelope text-[var(--gold)] text-xs"></i>
        </div>
        <a href="mailto:jacquelinedelvalle@jdvabogados.cl" class="pt-1 text-[var(--gold-light)] hover:text-[var(--gold)] transition-colors duration-200 no-underline hover:underline break-all text-xs sm:text-sm">
          jacquelinedelvalle@jdvabogados.cl
        </a>
      </li>
    </ul>
  </div>
</div>

<style>
  .w-18 { width: 4.5rem; }
  .h-18 { height: 4.5rem; }

  .profile-card-wrapper {
    opacity: 0;
    transform: translateY(24px);
    transition: opacity 0.6s cubic-bezier(0.16, 1, 0.3, 1), transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    transition-delay: 0.15s;
  }

  .profile-card-wrapper.visible {
    opacity: 1;
    transform: translateY(0);
  }

  @keyframes profilePulse {
    0%, 100% { opacity: 0.5; transform: scale(1); }
    50% { opacity: 0.9; transform: scale(1.1); }
  }

  @media (prefers-reduced-motion: reduce) {
    .profile-card-wrapper { transition: none; opacity: 1; transform: none; }
  }
</style>

<script is:inline>
  (function() {
    var el = document.querySelector('.profile-card-wrapper');
    if (el && 'IntersectionObserver' in window) {
      var obs = new IntersectionObserver(function(entries) {
        entries.forEach(function(entry) {
          if (entry.isIntersecting) { entry.target.classList.add('visible'); obs.unobserve(entry.target); }
        });
      }, { threshold: 0.15 });
      obs.observe(el);
    } else if (el) { el.classList.add('visible'); }
  })();
</script>
